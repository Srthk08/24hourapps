  // Setup real-time subscriptions for products
  async function setupProductsRealtime() {
    try {
      // Wait for Supabase to be available
      let supabaseClient = null;
      if (window.supabase && window.supabase.auth) {
        supabaseClient = window.supabase;
      } else {
        // Wait a bit for Supabase to load
        await new Promise(resolve => setTimeout(resolve, 1000));
        if (window.supabase && window.supabase.auth) {
          supabaseClient = window.supabase;
        }
      }

      if (!supabaseClient) {
        console.warn('âš ï¸ Supabase not available for real-time subscriptions');
        return;
      }

      // Import real-time utility
      const { subscribeToTable } = await import('../../lib/realtime');
      
      // Subscribe to products table changes
      const productsSub = subscribeToTable('products', (payload) => {
        console.log('ðŸ”„ Real-time update received for products:', payload.eventType);
        // Update prices dynamically without reloading page
        if (window.productsUpdateTimeout) {
          clearTimeout(window.productsUpdateTimeout);
        }
        window.productsUpdateTimeout = setTimeout(() => {
          console.log('ðŸ”„ Updating product prices from Supabase...');
          updateProductsPrices();
        }, 500); // Small delay to batch multiple updates
      });

      productsRealtimeSubscriptions.push(productsSub);

      // Subscribe to product_plans table changes
      const plansSub = subscribeToTable('product_plans', (payload) => {
        console.log('ðŸ”„ Real-time update received for product_plans:', payload.eventType);
        // Update prices dynamically
        if (window.productsUpdateTimeout) {
          clearTimeout(window.productsUpdateTimeout);
        }
        window.productsUpdateTimeout = setTimeout(() => {
          console.log('ðŸ”„ Updating product prices from Supabase...');
          updateProductsPrices();
        }, 500);
      });

      productsRealtimeSubscriptions.push(plansSub);

      // Also fetch and update prices on page load to ensure latest data
      updateProductsPrices();

      // Set up polling as fallback (check every 10 seconds if real-time fails)
      let pollCount = 0;
      const maxPolls = 3; // Check 3 times, then stop
      const pollInterval = setInterval(async () => {
        pollCount++;
        console.log(`ðŸ”„ Polling for price updates (${pollCount}/${maxPolls})...`);
        await updateProductsPrices();
        if (pollCount >= maxPolls) {
          clearInterval(pollInterval);
          console.log('âœ… Polling complete, real-time should be active now');
        }
      }, 10000); // Poll every 10 seconds

      // Store interval for cleanup
      window.productsPollInterval = pollInterval;

      console.log('âœ… Real-time subscriptions setup complete for products');
      
      // Add test function to window for debugging
      window.testPriceUpdate = async function() {
        console.log('ðŸ§ª Testing price update...');
        await updateProductsPrices();
        console.log('âœ… Test complete - check if prices updated');
      };
      
      console.log('ðŸ’¡ Tip: Run window.testPriceUpdate() in console to manually refresh prices');
    } catch (error) {
      console.error('âŒ Error setting up real-time subscriptions for products:', error);
      // If real-time fails, use polling as fallback
      console.log('ðŸ”„ Real-time failed, using polling fallback...');
      const pollInterval = setInterval(async () => {
        await updateProductsPrices();
      }, 5000); // Poll every 5 seconds as fallback
      window.productsPollInterval = pollInterval;
    }
  }

  // Cleanup subscriptions on page unload
  window.addEventListener('beforeunload', () => {
    if (productsRealtimeSubscriptions.length > 0) {
      productsRealtimeSubscriptions.forEach(sub => {
        if (sub && sub.unsubscribe) {
          sub.unsubscribe();
        }
      });
    }
    if (window.productsUpdateTimeout) {
      clearTimeout(window.productsUpdateTimeout);
    }
    if (window.productsPollInterval) {
      clearInterval(window.productsPollInterval);
    }
  });

  // Handle product image errors with fallback
  document.addEventListener('DOMContentLoaded', function() {
    const fallbackImages: Record<string, string> = {
      'restaurant-menu-system': 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=400&h=300&fit=crop&crop=center',
      'android-tv-app': 'https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=400&h=300&fit=crop&crop=center',
      'streaming-mobile-app': 'https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=400&h=300&fit=crop&crop=center',
      'restaurant-website': 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=400&h=300&fit=crop&crop=center',
    };

    const defaultFallback = 'https://images.unsplash.com/photo-1551434678-e076c223a692?w=400&h=300&fit=crop&crop=center';

    // Set up error handlers for all product images
    document.querySelectorAll('.product-card img').forEach((img: HTMLImageElement) => {
      // Only set up handler if not already set
      if (!img.hasAttribute('data-error-handled')) {
        img.setAttribute('data-error-handled', 'true');
        
        img.addEventListener('error', function() {
          // Try to get fallback from product slug
          const productCard = this.closest('.product-card');
          if (productCard) {
            const productSlug = productCard.getAttribute('data-product-slug');
            if (productSlug && fallbackImages[productSlug]) {
              this.src = fallbackImages[productSlug];
            } else {
              this.src = defaultFallback;
            }
          } else {
            this.src = defaultFallback;
          }
        });

        // Also check if image failed to load initially
        if (!img.complete || img.naturalHeight === 0) {
          img.dispatchEvent(new Event('error'));
        }
      }
    });
  });
