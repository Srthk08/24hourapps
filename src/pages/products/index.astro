// Only fetch products once and filter client-side for better performance
const products = await getProducts();

// Helper function to get fallback image URLs based on product slug
const getFallbackImage = (slug: string): string => {
  const fallbackImages: Record<string, string> = {
    'restaurant-menu-system': 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=400&h=300&fit=crop&crop=center',
    'android-tv-app': 'https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=400&h=300&fit=crop&crop=center',
    'streaming-mobile-app': 'https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=400&h=300&fit=crop&crop=center',
    'restaurant-website': 'https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=400&h=300&fit=crop&crop=center',
  };
  return fallbackImages[slug] || 'https://images.unsplash.com/photo-1551434678-e076c223a692?w=400&h=300&fit=crop&crop=center';
};

// Helper function to get product image with fallback
const getProductImage = (product: any): string => {
  // If image is a local path and doesn't start with http, use fallback
  if (product.featured_image && !product.featured_image.startsWith('http')) {
    return getFallbackImage(product.slug);
  }
  // If image is already a URL, use it
  if (product.featured_image && product.featured_image.startsWith('http')) {
    return product.featured_image;
  }
  // Default fallback
  return getFallbackImage(product.slug);
};

// Pre-process products for faster client-side filtering and remove duplicates
const processedProducts = products
  .map(product => ({
    ...product,
    category: product.category || 'other',
    slug: product.slug || product.name.toLowerCase().replace(/\s+/g, '-'),
    featured_image: getProductImage(product) // Ensure we have a valid image URL
  }))
  .filter((product, index, self) => 
    // Remove duplicates based on id
    index === self.findIndex(p => p.id === product.id)
  );
