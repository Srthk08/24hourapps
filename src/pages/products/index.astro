      console.log('‚ö†Ô∏è Not on products index page, using fallback alert');
      alert('This product is currently under development and will be available in a few days. We\'re working hard to bring you the best experience possible.');
      return;
    }
    
    // CRITICAL: Clear any blocking flags that might prevent the dialog from showing
    window.__productDialogBlocked = false;
    
    // Wait a bit to ensure DOM is ready
    const tryShowDialog = () => {
      const dialog = document.getElementById('product-dialog');
      const dialogContent = document.getElementById('dialog-content');
      
      if (!dialog) {
        console.error('‚ùå Dialog element not found! Retrying...');
        // Try again after a short delay (max 10 attempts)
        if (typeof tryShowDialog.attempts === 'undefined') {
          tryShowDialog.attempts = 0;
        }
        tryShowDialog.attempts++;
        if (tryShowDialog.attempts < 10) {
          setTimeout(tryShowDialog, 100);
        } else {
          console.error('‚ùå Dialog element not found after 10 attempts, showing alert');
          alert('This product is currently under development and will be available in a few days. We\'re working hard to bring you the best experience possible.');
        }
        return;
      }
      
      console.log('‚úÖ Dialog element found, showing...');
      
      // CRITICAL: First ensure scroll is NOT locked (in case it was stuck from Google OAuth)
      if (document.body) {
        document.body.style.overflow = '';
        document.body.style.removeProperty('overflow');
      }
      if (document.documentElement) {
        document.documentElement.style.overflow = '';
        document.documentElement.style.removeProperty('overflow');
      }
      
      // Remove all blocking attributes and classes
      dialog.removeAttribute('hidden');
      dialog.removeAttribute('data-android-tv-blocked');
      dialog.removeAttribute('data-oms-blocked');
      
      // Clear any blocking flags - CRITICAL for Google OAuth users
      window.__productDialogBlocked = false;
      
      // Remove any blocking data attributes
      dialog.removeAttribute('data-android-tv-blocked');
      dialog.removeAttribute('data-oms-blocked');
      dialog.removeAttribute('data-blocked');
      
      // CRITICAL: Disable any MutationObserver from ProductDialog component that might hide it
      // Store reference to disconnect it if needed
      if (window.__productDialogObserver) {
        try {
          window.__productDialogObserver.disconnect();
          console.log('‚úÖ Disconnected ProductDialog MutationObserver');
        } catch(e) {
          console.log('‚ö†Ô∏è Could not disconnect observer:', e);
        }
      }
      
      // Show dialog - override ALL inline !important styles
      // This MUST work even for logged-in users (Google OAuth or regular)
      dialog.classList.remove('hidden');
      dialog.style.setProperty('display', 'flex', 'important');
      dialog.style.setProperty('visibility', 'visible', 'important');
      dialog.style.setProperty('opacity', '1', 'important');
      dialog.style.setProperty('pointer-events', 'auto', 'important');
      dialog.style.setProperty('z-index', '9999', 'important');
      dialog.style.setProperty('position', 'fixed', 'important');
      dialog.style.setProperty('top', '0', 'important');
      dialog.style.setProperty('left', '0', 'important');
      dialog.style.setProperty('right', '0', 'important');
      dialog.style.setProperty('bottom', '0', 'important');
      dialog.style.setProperty('width', '100%', 'important');
      dialog.style.setProperty('height', '100%', 'important');
      dialog.style.setProperty('background-color', 'rgba(0, 0, 0, 0.5)', 'important');
      
      // Force remove any inline styles that might hide it
      dialog.style.removeProperty('height');
      dialog.style.removeProperty('width');
      dialog.style.removeProperty('overflow');
      dialog.style.removeProperty('top');
      dialog.style.removeProperty('left');
      
      // Re-apply correct styles
      dialog.style.setProperty('height', '100%', 'important');
      dialog.style.setProperty('width', '100%', 'important');
      dialog.style.setProperty('top', '0', 'important');
      dialog.style.setProperty('left', '0', 'important');
      
      // Verify dialog is actually visible BEFORE locking scroll
      setTimeout(() => {
        const computedStyle = window.getComputedStyle(dialog);
        
        // Only lock scroll if dialog is actually visible
        if (computedStyle.display === 'flex' && computedStyle.visibility === 'visible') {
          if (document.body) {
            document.body.style.overflow = 'hidden';
          }
          if (document.documentElement) {
            document.documentElement.style.overflow = 'hidden';
          }
          console.log('‚úÖ Dialog visible, scroll locked');
        } else {
          console.warn('‚ö†Ô∏è Dialog not fully visible, keeping scroll unlocked');
          // Restore scroll if dialog didn't show
          if (document.body) {
            document.body.style.overflow = '';
          }
          if (document.documentElement) {
            document.documentElement.style.overflow = '';
          }
        }
      }, 50);
      
      // Trigger animation
      setTimeout(() => {
        if (dialogContent) {
          dialogContent.classList.remove('scale-95', 'opacity-0');
          dialogContent.classList.add('scale-100', 'opacity-100');
          dialogContent.style.setProperty('opacity', '1', 'important');
          dialogContent.style.setProperty('transform', 'scale(1)', 'important');
        }
      }, 10);
      
      console.log('‚úÖ Dialog should now be visible');
      console.log('Dialog display:', window.getComputedStyle(dialog).display);
      console.log('Dialog visibility:', window.getComputedStyle(dialog).visibility);
      console.log('Dialog opacity:', window.getComputedStyle(dialog).opacity);
      
      // Safety check: If dialog still not visible after 200ms, restore scroll and show alert
      setTimeout(() => {
        const finalCheck = window.getComputedStyle(dialog);
        if (finalCheck.display === 'none' || finalCheck.visibility === 'hidden' || finalCheck.opacity === '0') {
          console.warn('‚ö†Ô∏è Dialog not visible after 200ms, restoring scroll');
          // Restore scroll
          if (document.body) {
            document.body.style.overflow = '';
            document.body.style.removeProperty('overflow');
          }
          if (document.documentElement) {
            document.documentElement.style.overflow = '';
            document.documentElement.style.removeProperty('overflow');
          }
          // Show alert as fallback
          alert('This product is currently under development and will be available in a few days. We\'re working hard to bring you the best experience possible.');
        }
      }, 200);
    };
    
    // Try immediately
    tryShowDialog();
  };
  
  // Product filtering with performance optimization
  const filterButtons = document.querySelectorAll('.filter-btn');
  const productCards = document.querySelectorAll('.product-card');
  let colorsEnabled = true;
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      filterButtons.forEach(btn => {
        btn.classList.remove('active');
        btn.classList.add('bg-white', 'text-gray-700', 'border');
        // Remove any blue background classes
        btn.classList.remove('bg-primary-600', 'bg-blue-600', 'text-white');
