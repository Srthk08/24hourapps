        let androidQuery = supabase
          .from('android_tv_app_forms')
          .select('*')
          .order('created_at', { ascending: false });
        
        const { data: androidApps, error: androidError } = await androidQuery;
        
        if (androidError) {
          console.error('Error loading Android TV apps:', androidError);
        }
        
        // Combine and format apps
        let allApps = [];
        
        if (customizations) {
          customizations.forEach(custom => {
            allApps.push({
              id: custom.id,
              name: custom.app_name || custom.project_name || custom.product_name || 'N/A',
              email: custom.customer_email || custom.contact_email || 'N/A',
              version: custom.status === 'completed' ? '7.0.1467.50' : null,
              status: custom.status,
              type: 'customization',
              created_at: custom.created_at,
              uid: custom.user_id || 'N/A',
              app_id: custom.id.substring(0, 20)
            });
          });
        }
        
        if (androidApps) {
          androidApps.forEach(app => {
            allApps.push({
              id: app.id,
              name: app.name || 'N/A',
              email: app.email || 'N/A',
              version: app.status === 'completed' ? '7.0.504.29' : null,
              status: app.status,
              type: 'android_tv',
