---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Rebranded Apps Panel">
  <div class="min-h-screen bg-gray-50">
    <!-- Page Header with Title -->
    <div class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Rebranded Apps Panel</h1>
          <p class="mt-1 text-xs sm:text-sm text-gray-500">Manage and monitor all app builds and requests</p>
        </div>
      </div>
    </div>

    <!-- Top Navigation Tabs -->
    <div class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8">
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-between gap-3 sm:gap-0 py-3 sm:py-0 sm:h-16">
          <!-- Left: Build Requests Tab (Active) -->
          <div class="flex items-center space-x-1 overflow-x-auto">
            <button id="build-requests-tab" class="flex items-center space-x-1 sm:space-x-2 px-3 sm:px-6 py-2 sm:py-3 text-xs sm:text-sm font-semibold text-blue-600 border-b-2 border-blue-600 transition-all duration-200 hover:bg-blue-50 rounded-t-lg whitespace-nowrap">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="hidden xs:inline">Build Requests</span>
              <span class="xs:hidden">Build</span>
            </button>
            
            <button id="search-tab" class="flex items-center space-x-1 sm:space-x-2 px-3 sm:px-6 py-2 sm:py-3 text-xs sm:text-sm font-medium text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-t-lg transition-all duration-200 whitespace-nowrap">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <span>Search</span>
            </button>
          </div>

          <!-- Center: Search Bar (shown when Search tab is active) -->
          <div id="search-bar-container" class="hidden flex-1 max-w-md mx-0 sm:mx-4 w-full sm:w-auto">
            <div class="relative">
              <input 
                type="text" 
                id="search-input" 
                placeholder="Search apps..." 
                class="w-full pl-10 sm:pl-11 pr-4 py-2 sm:py-2.5 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-xs sm:text-sm"
              />
              <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 sm:w-5 sm:h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Navigation Buttons: Tickets, Users, Contacts -->
    <div class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-5">
        <div class="flex flex-wrap items-center justify-center sm:justify-start gap-3 sm:gap-4">
          <a href="/admin/tickets" class="group flex items-center space-x-2 sm:space-x-3 px-5 sm:px-6 py-2.5 sm:py-3 bg-white border-2 border-blue-200 rounded-xl hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 shadow-sm hover:shadow-md">
            <div class="flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg group-hover:bg-blue-200 transition-colors">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
              </svg>
            </div>
            <span class="text-sm sm:text-base font-semibold text-gray-700 group-hover:text-blue-700">Tickets</span>
          </a>
          
          <a href="/admin/users" class="group flex items-center space-x-2 sm:space-x-3 px-5 sm:px-6 py-2.5 sm:py-3 bg-white border-2 border-indigo-200 rounded-xl hover:border-indigo-400 hover:bg-indigo-50 transition-all duration-200 shadow-sm hover:shadow-md">
            <div class="flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 bg-indigo-100 rounded-lg group-hover:bg-indigo-200 transition-colors">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <span class="text-sm sm:text-base font-semibold text-gray-700 group-hover:text-indigo-700">Users</span>
          </a>
          
          <a href="/admin/contacts" class="group flex items-center space-x-2 sm:space-x-3 px-5 sm:px-6 py-2.5 sm:py-3 bg-white border-2 border-green-200 rounded-xl hover:border-green-400 hover:bg-green-50 transition-all duration-200 shadow-sm hover:shadow-md">
            <div class="flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 bg-green-100 rounded-lg group-hover:bg-green-200 transition-colors">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <span class="text-sm sm:text-base font-semibold text-gray-700 group-hover:text-green-700">Contacts</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-8">
      <!-- Apps List -->
      <div id="apps-list" class="space-y-3">
        <!-- Apps will be loaded here -->
        <div class="text-center py-16">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
            <svg class="w-8 h-8 text-gray-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <p class="text-gray-500 font-medium">Loading apps...</p>
        </div>
      </div>
    </div>


    <!-- App Details Modal -->
    <div id="app-details-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50 backdrop-blur-sm">
      <div class="flex items-center justify-center min-h-screen p-2 sm:p-4">
        <div class="bg-white rounded-xl sm:rounded-2xl shadow-2xl max-w-3xl w-full p-4 sm:p-6 lg:p-8 transform transition-all max-h-[95vh] overflow-y-auto">
          <!-- Modal Header -->
          <div class="mb-4 sm:mb-6 pb-4 sm:pb-6 border-b border-gray-200">
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1 min-w-0">
                <h2 id="modal-app-name" class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900 mb-2 sm:mb-3 break-words"></h2>
                <div class="flex flex-wrap items-center gap-2 sm:gap-3 text-xs sm:text-sm">
                  <div class="flex items-center space-x-1 sm:space-x-2 px-2 sm:px-3 py-1 sm:py-1.5 bg-blue-50 rounded-lg">
                    <span id="modal-app-version" class="text-blue-700 font-semibold"></span>
                  </div>
                  <div class="flex items-center space-x-1 sm:space-x-2 px-2 sm:px-3 py-1 sm:py-1.5 bg-gray-50 rounded-lg min-w-0">
                    <svg class="w-3 h-3 sm:w-4 sm:h-4 text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <span id="modal-app-email" class="text-gray-700 font-medium truncate"></span>
                    <button onclick="copyToClipboard(document.getElementById('modal-app-email').textContent)" class="ml-1 sm:ml-2 p-1 text-blue-600 hover:bg-blue-100 rounded transition-colors flex-shrink-0" title="Copy email">
                      <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
              <button onclick="closeAppDetailsModal()" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mb-4 sm:mb-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-3">
              <button onclick="handleRebuild()" class="px-3 sm:px-4 py-2 sm:py-3 bg-blue-600 text-white rounded-lg sm:rounded-xl hover:bg-blue-700 transition-all duration-200 font-semibold text-xs sm:text-sm shadow-md hover:shadow-lg">
                RE-BUILD
              </button>
              <button onclick="handleUpdateLatest()" class="px-3 sm:px-4 py-2 sm:py-3 bg-blue-600 text-white rounded-lg sm:rounded-xl hover:bg-blue-700 transition-all duration-200 font-semibold text-xs sm:text-sm shadow-md hover:shadow-lg">
                UPDATE TO LATEST
              </button>
              <button onclick="handleUpdateRebranding()" class="px-3 sm:px-4 py-2 sm:py-3 bg-blue-600 text-white rounded-lg sm:rounded-xl hover:bg-blue-700 transition-all duration-200 font-semibold text-xs sm:text-sm shadow-md hover:shadow-lg">
                UPDATE REBRANDING
              </button>
              <button onclick="handleRebuildDemo()" class="px-3 sm:px-4 py-2 sm:py-3 bg-blue-600 text-white rounded-lg sm:rounded-xl hover:bg-blue-700 transition-all duration-200 font-semibold text-xs sm:text-sm shadow-md hover:shadow-lg">
                RE-BUILD DEMO
              </button>
            </div>
          </div>

          <!-- Notes Input -->
          <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Notes & Information</label>
            <textarea 
              id="modal-notes-input" 
              placeholder="Add notes or information here..." 
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-none"
              rows="4"
            ></textarea>
          </div>

          <!-- Add Info Link -->
          <div class="mb-6">
            <a href="#" id="add-info-link" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium text-sm transition-colors">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Add Info
            </a>
          </div>

          <!-- IDs Section -->
          <div class="bg-gray-50 rounded-xl p-5 mb-6">
            <div class="space-y-4">
              <div class="flex items-center justify-between py-2 border-b border-gray-200 last:border-0">
                <span class="text-sm font-semibold text-gray-600">UID:</span>
                <div class="flex items-center space-x-2">
                  <span id="modal-app-uid" class="text-gray-900 font-mono text-sm bg-white px-3 py-1.5 rounded-lg border border-gray-300"></span>
                  <button onclick="copyToClipboard(document.getElementById('modal-app-uid').textContent)" class="p-2 text-blue-600 hover:bg-blue-100 rounded-lg transition-colors" title="Copy UID">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="flex items-center justify-between py-2">
                <span class="text-sm font-semibold text-gray-600">APP ID:</span>
                <div class="flex items-center space-x-2">
                  <span id="modal-app-id" class="text-gray-900 font-mono text-sm bg-white px-3 py-1.5 rounded-lg border border-gray-300"></span>
                  <button onclick="copyToClipboard(document.getElementById('modal-app-id').textContent)" class="p-2 text-blue-600 hover:bg-blue-100 rounded-lg transition-colors" title="Copy APP ID">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal Footer -->
          <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
            <button onclick="closeAppDetailsModal()" class="px-6 py-2.5 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 transition-all duration-200 font-semibold text-sm">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const SUPABASE_URL = 'https://tguopyxmlfxcalhfitob.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRndW9weXhtbGZ4Y2FsaGZpdG9iIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQyMTk3NDQsImV4cCI6MjA3OTc5NTc0NH0.GUtJWVu8i6NWoleXI_Fd-ePM4vOFQtulyk1kqZgPgRM';
    
    let supabase = null;
    let currentFilter = 'all';
    let currentApps = [];
    let currentAppDetails = null;
    
    function waitForSupabase() {
      return new Promise((resolve) => {
        if (window.supabase && window.supabase.auth && typeof window.supabase.auth.getUser === 'function') {
          supabase = window.supabase;
          resolve(supabase);
        } 
        else if (window.supabase && typeof window.supabase.createClient === 'function') {
          supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
          resolve(supabase);
        } 
        else {
          setTimeout(() => waitForSupabase().then(resolve), 100);
        }
      });
    }
    
    async function loadApps(filter = 'all') {
      try {
        if (!supabase) {
          await waitForSupabase();
        }
        
        const appsList = document.getElementById('apps-list');
        appsList.innerHTML = `
          <div class="text-center py-16">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
              <svg class="w-8 h-8 text-gray-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </div>
            <p class="text-gray-500 font-medium">Loading apps...</p>
          </div>
        `;
        
        // Load from customization_forms and android_tv_app_forms tables
        let query = supabase
          .from('customization_forms')
          .select('*, profiles(full_name, email)')
          .order('created_at', { ascending: false });
        
        const { data: customizations, error: customError } = await query;
        
        if (customError) {
          console.error('Error loading customizations:', customError);
        }
        
        // Also load from android_tv_app_forms
        let androidQuery = supabase
          .from('android_tv_app_forms')
          .select('*')
          .order('created_at', { ascending: false });
        
        const { data: androidApps, error: androidError } = await androidQuery;
        
        if (androidError) {
          console.error('Error loading Android TV apps:', androidError);
        }
        
        // Combine and format apps
        let allApps = [];
        
        if (customizations) {
          customizations.forEach(custom => {
            allApps.push({
              id: custom.id,
              name: custom.app_name || custom.project_name || custom.product_name || 'N/A',
              email: custom.customer_email || custom.contact_email || 'N/A',
              version: custom.status === 'completed' ? '7.0.1467.50' : null,
              status: custom.status,
              type: 'customization',
              created_at: custom.created_at,
              uid: custom.user_id || 'N/A',
              app_id: custom.id.substring(0, 20)
            });
          });
        }
        
        if (androidApps) {
          androidApps.forEach(app => {
            allApps.push({
              id: app.id,
              name: app.name || 'N/A',
              email: app.email || 'N/A',
              version: app.status === 'completed' ? '7.0.504.29' : null,
              status: app.status,
              type: 'android_tv',
              created_at: app.created_at,
              uid: app.id.substring(0, 20),
              app_id: app.id.substring(0, 20)
            });
          });
        }
        
        // Apply filter
        if (filter === 'real-requested') {
          allApps = allApps.filter(app => app.status === 'pending' && app.type === 'customization');
        } else if (filter === 'real-building') {
          allApps = allApps.filter(app => app.status === 'in_progress' && app.type === 'customization');
        } else if (filter === 'demo-failed') {
          allApps = allApps.filter(app => app.status === 'rejected' || app.status === 'cancelled');
        } else if (filter === 'demo-building') {
          allApps = allApps.filter(app => app.status === 'in_progress' && app.type === 'android_tv');
        } else if (filter === 'demo-builded') {
          allApps = allApps.filter(app => app.status === 'completed');
        }
        
        currentApps = allApps;
        renderApps(allApps);
        
      } catch (error) {
        console.error('Error loading apps:', error);
        document.getElementById('apps-list').innerHTML = '<div class="text-center py-12 text-red-500"><p>Error loading apps. Please try again.</p></div>';
      }
    }
    
    function renderApps(apps) {
      const appsList = document.getElementById('apps-list');
      
      if (apps.length === 0) {
        appsList.innerHTML = `
          <div class="text-center py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-4">
              <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No apps found</h3>
            <p class="text-gray-500 text-sm">Try adjusting your filters or search criteria</p>
          </div>
        `;
        return;
      }
      
      appsList.innerHTML = apps.map(app => {
        const statusBadge = app.status === 'completed' ? 
          `<span class="px-3 py-1 text-xs font-semibold text-white bg-green-600 rounded-full shadow-sm">real_app_builded</span>` :
          `<span class="px-3 py-1 text-xs font-semibold text-white bg-gray-700 rounded-full shadow-sm">N/A</span>`;
        
        const emptyBadge = `<span class="px-3 py-1 text-xs font-semibold text-white bg-gray-700 rounded-full shadow-sm">empty</span>`;
        
        const versionBadge = app.version ? 
          `<span class="px-3 py-1 text-xs font-semibold text-white bg-gray-700 rounded-full shadow-sm">${app.version}</span>` : 
          '';
        
        const statusColors = {
          'pending': 'bg-yellow-100 text-yellow-800 border-yellow-200',
          'in_progress': 'bg-blue-100 text-blue-800 border-blue-200',
          'completed': 'bg-green-100 text-green-800 border-green-200',
          'cancelled': 'bg-red-100 text-red-800 border-red-200',
          'rejected': 'bg-red-100 text-red-800 border-red-200'
        };
        
        const statusColor = statusColors[app.status] || 'bg-gray-100 text-gray-800 border-gray-200';
        
        return `
