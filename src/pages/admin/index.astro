    }
    
    function openAppDetails(appId) {
      const app = currentApps.find(a => a.id === appId);
      if (!app) return;
      
      currentAppDetails = app;
      
      document.getElementById('modal-app-name').textContent = app.name;
      document.getElementById('modal-app-email').textContent = app.email;
      document.getElementById('modal-app-version').textContent = app.version ? `V: ${app.version}` : 'V: N/A';
      document.getElementById('modal-app-uid').textContent = app.uid;
      document.getElementById('modal-app-id').textContent = app.app_id;
      document.getElementById('modal-notes-input').value = '';
      
      document.getElementById('app-details-modal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
    
    function closeAppDetailsModal() {
      document.getElementById('app-details-modal').classList.add('hidden');
      document.body.style.overflow = '';
      currentAppDetails = null;
    }
    
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        // Show toast notification
        showToast('Copied to clipboard!', 'success');
      }).catch(err => {
        console.error('Failed to copy:', err);
        showToast('Failed to copy', 'error');
      });
    }
    
    function showToast(message, type = 'success') {
      const toast = document.createElement('div');
      toast.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white font-medium text-sm transform transition-all duration-300 ${
        type === 'success' ? 'bg-green-500' : 'bg-red-500'
      }`;
      toast.textContent = message;
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.style.opacity = '0';
        toast.style.transform = 'translateY(-20px)';
        setTimeout(() => toast.remove(), 300);
      }, 2000);
    }
    
    function handleRebuild() {
      if (!currentAppDetails) return;
      alert('RE-BUILD action triggered for: ' + currentAppDetails.name);
      // Add your rebuild logic here
    }
    
    function handleUpdateLatest() {
      if (!currentAppDetails) return;
      alert('UPDATE TO LATEST action triggered for: ' + currentAppDetails.name);
      // Add your update logic here
    }
    
    function handleUpdateRebranding() {
      if (!currentAppDetails) return;
      alert('UPDATE REBRANDING action triggered for: ' + currentAppDetails.name);
      // Add your rebranding logic here
    }
    
    function handleRebuildDemo() {
      if (!currentAppDetails) return;
      alert('RE-BUILD DEMO action triggered for: ' + currentAppDetails.name);
      // Add your demo rebuild logic here
    }
    
    // Tab switching
    document.getElementById('build-requests-tab').addEventListener('click', () => {
      document.getElementById('build-requests-tab').classList.add('text-blue-600', 'border-b-2', 'border-blue-600');
      document.getElementById('build-requests-tab').classList.remove('text-gray-600');
      document.getElementById('search-tab').classList.remove('text-blue-600', 'border-b-2', 'border-blue-600');
      document.getElementById('search-tab').classList.add('text-gray-600');
      document.getElementById('search-bar-container').classList.add('hidden');
      loadApps(currentFilter);
    });
    
    document.getElementById('search-tab').addEventListener('click', () => {
      document.getElementById('search-tab').classList.add('text-blue-600', 'border-b-2', 'border-blue-600');
      document.getElementById('search-tab').classList.remove('text-gray-600');
      document.getElementById('build-requests-tab').classList.remove('text-blue-600', 'border-b-2', 'border-blue-600');
      document.getElementById('build-requests-tab').classList.add('text-gray-600');
      document.getElementById('search-bar-container').classList.remove('hidden');
    });
    
    
    // Search functionality
    document.getElementById('search-input').addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      if (searchTerm === '') {
        renderApps(currentApps);
        return;
      }
      
      const filtered = currentApps.filter(app => 
        app.name.toLowerCase().includes(searchTerm) ||
        app.email.toLowerCase().includes(searchTerm)
      );
      
      renderApps(filtered);
    });
    
    // Make functions globally available
    window.openAppDetails = openAppDetails;
    window.closeAppDetailsModal = closeAppDetailsModal;
    window.copyToClipboard = copyToClipboard;
    window.handleRebuild = handleRebuild;
    window.handleUpdateLatest = handleUpdateLatest;
    window.handleUpdateRebranding = handleUpdateRebranding;
    window.handleRebuildDemo = handleRebuildDemo;
    window.showToast = showToast;
    
    // Initialize
    document.addEventListener('DOMContentLoaded', async () => {
      await waitForSupabase();
      await loadApps();
    });
    
    // Close modal on backdrop click
    document.getElementById('app-details-modal').addEventListener('click', (e) => {
      if (e.target.id === 'app-details-modal') {
        closeAppDetailsModal();
      }
    });
  </script>
