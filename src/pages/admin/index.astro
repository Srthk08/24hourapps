          allApps = allApps.filter(app => app.status === 'pending' && app.type === 'customization');
        } else if (filter === 'real-building') {
          allApps = allApps.filter(app => app.status === 'in_progress' && app.type === 'customization');
        } else if (filter === 'demo-failed') {
