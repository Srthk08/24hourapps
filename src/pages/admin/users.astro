---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="User Profiles - Admin Panel">
  <div class="min-h-screen bg-gray-50 pb-20">
    <!-- Page Header -->
    <div class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 sm:gap-0">
          <div class="flex-1 min-w-0">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900">User Profiles</h2>
            <p class="mt-1 text-xs sm:text-sm text-gray-500">View and manage user accounts</p>
          </div>
          <a href="/admin" class="flex items-center space-x-2 px-3 sm:px-4 py-2 text-xs sm:text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-all duration-200 shadow-sm whitespace-nowrap">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span class="hidden sm:inline">Back to Dashboard</span>
            <span class="sm:hidden">Back</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Search Section -->
    <div class="bg-white border-b border-gray-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-3 sm:py-4">
        <div class="relative w-full max-w-md">
          <input 
            type="text" 
            id="user-search" 
            placeholder="Search users..." 
            class="w-full pl-10 sm:pl-11 pr-4 py-2 sm:py-2.5 border-2 border-gray-300 rounded-lg sm:rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-xs sm:text-sm"
          />
          <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 sm:w-5 sm:h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Users List -->
    <div class="max-w-7xl mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6">
      
      <div id="users-list" class="space-y-4">
        <div class="text-center py-16">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
            <svg class="w-8 h-8 text-gray-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <p class="text-gray-500 font-medium">Loading users...</p>
        </div>
      </div>
    </div>

    <!-- User Details Modal -->
    <div id="user-details-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50 backdrop-blur-sm">
      <div class="flex items-center justify-center min-h-screen p-2 sm:p-4">
        <div class="bg-white rounded-xl sm:rounded-2xl shadow-2xl max-w-2xl w-full p-4 sm:p-6 lg:p-8 transform transition-all max-h-[95vh] overflow-y-auto">
          <div class="mb-6 pb-6 border-b border-gray-200">
            <div class="flex items-start justify-between">
              <div class="flex items-center space-x-3 sm:space-x-4">
                <div id="modal-user-avatar" class="w-12 h-12 sm:w-16 sm:h-16 rounded-full flex items-center justify-center text-white font-bold text-xl sm:text-2xl flex-shrink-0"></div>
                <div class="min-w-0 flex-1">
                  <h3 id="modal-user-name" class="text-xl sm:text-2xl font-bold text-gray-900 truncate"></h3>
                  <p id="modal-user-email-header" class="text-xs sm:text-sm text-gray-500 mt-1 truncate"></p>
                </div>
              </div>
              <button onclick="closeUserDetailsModal()" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>

          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">Email</span>
                <p id="modal-user-email" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">Phone</span>
                <p id="modal-user-phone" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">Role</span>
                <p id="modal-user-role" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">Status</span>
                <p id="modal-user-status" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4 md:col-span-2">
                <span class="text-xs font-semibold text-gray-500 uppercase">Company</span>
                <p id="modal-user-company" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">Created</span>
                <p id="modal-user-created" class="text-sm font-medium text-gray-900 mt-1"></p>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <span class="text-xs font-semibold text-gray-500 uppercase">User ID</span>
                <p id="modal-user-id" class="text-xs font-mono text-gray-900 mt-1 break-all"></p>
              </div>
            </div>
          </div>

          <div class="flex justify-end mt-6 pt-6 border-t border-gray-200">
            <button onclick="closeUserDetailsModal()" class="px-6 py-2.5 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 transition-all duration-200 font-semibold text-sm">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const SUPABASE_URL = 'https://tguopyxmlfxcalhfitob.supabase.co';
    const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRndW9weXhtbGZ4Y2FsaGZpdG9iIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQyMTk3NDQsImV4cCI6MjA3OTc5NTc0NH0.GUtJWVu8i6NWoleXI_Fd-ePM4vOFQtulyk1kqZgPgRM';
    
    let supabase = null;
    let allUsers = [];
    
    function waitForSupabase() {
      return new Promise((resolve) => {
        if (window.supabase && window.supabase.auth && typeof window.supabase.auth.getUser === 'function') {
          supabase = window.supabase;
          resolve(supabase);
        } 
        else if (window.supabase && typeof window.supabase.createClient === 'function') {
          supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
          resolve(supabase);
        } 
        else {
          setTimeout(() => waitForSupabase().then(resolve), 100);
        }
      });
    }
    
    async function loadUsers() {
      try {
        if (!supabase) {
          await waitForSupabase();
        }
        
        const { data: users, error } = await supabase
          .from('profiles')
          .select('*')
          .order('created_at', { ascending: false });
        
        if (error) {
          console.error('Error loading users:', error);
          document.getElementById('users-list').innerHTML = '<div class="text-center py-12 text-red-500"><p>Error loading users.</p></div>';
          return;
        }
        
        allUsers = users || [];
        renderUsers(allUsers);
        
      } catch (error) {
        console.error('Error loading users:', error);
        document.getElementById('users-list').innerHTML = '<div class="text-center py-12 text-red-500"><p>Error loading users.</p></div>';
      }
    }
    
    function renderUsers(users) {
      const usersList = document.getElementById('users-list');
      
      if (users.length === 0) {
        usersList.innerHTML = `
          <div class="text-center py-20">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-4">
              <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No users found</h3>
            <p class="text-gray-500 text-sm">Try adjusting your search criteria</p>
          </div>
        `;
        return;
      }
      
      usersList.innerHTML = users.map(user => {
        // Muted/pastel colors for status badges
        const statusColors = {
          'active': 'bg-green-100 text-green-700 border border-green-200',
          'inactive': 'bg-gray-100 text-gray-700 border border-gray-200',
          'suspended': 'bg-red-100 text-red-700 border border-red-200',
          'pending_verification': 'bg-yellow-100 text-yellow-700 border border-yellow-200'
        };
        
        // Muted/pastel colors for role badges
        const roleColors = {
          'admin': 'bg-purple-100 text-purple-700 border border-purple-200',
          'customer': 'bg-blue-100 text-blue-700 border border-blue-200',
          'menu_operator': 'bg-green-100 text-green-700 border border-green-200',
          'developer': 'bg-orange-100 text-orange-700 border border-orange-200',
          'support': 'bg-pink-100 text-pink-700 border border-pink-200',
          'isadmin': 'bg-purple-100 text-purple-700 border border-purple-200'
        };
        
        const userInitial = (user.full_name || user.email || 'U').charAt(0).toUpperCase();
        const roleClass = roleColors[user.role?.toLowerCase()] || 'bg-gray-100 text-gray-700 border border-gray-200';
        const statusClass = statusColors[user.status?.toLowerCase()] || 'bg-gray-100 text-gray-700 border border-gray-200';
        
        return `
          <div class="bg-white border-2 border-gray-200 rounded-lg sm:rounded-xl p-4 sm:p-5 hover:border-blue-300 hover:shadow-lg transition-all duration-200">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 sm:gap-0">
              <div class="flex items-center space-x-3 sm:space-x-4 flex-1 min-w-0 w-full">
                <div class="w-12 h-12 sm:w-14 sm:h-14 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-lg sm:text-xl flex-shrink-0">
                  ${userInitial}
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-base sm:text-lg font-bold text-gray-900 truncate">${user.full_name || user.email || 'Unknown User'}</h3>
                  <p class="text-xs sm:text-sm text-gray-600 truncate mt-0.5">${user.email || 'No email'}</p>
                  <div class="flex items-center space-x-2 mt-2 flex-wrap">
                    <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full ${roleClass} whitespace-nowrap">
                      ${user.role || 'N/A'}
                    </span>
                    <span class="px-2 sm:px-3 py-1 text-xs font-semibold rounded-full ${statusClass} whitespace-nowrap">
                      ${(user.status || 'N/A').replace('_', ' ')}
                    </span>
                  </div>
                </div>
              </div>
              <button 
                onclick="openUserDetails('${user.id}')" 
                class="w-full sm:w-auto ml-0 sm:ml-4 flex items-center justify-center sm:justify-start space-x-2 px-3 sm:px-4 py-2 bg-blue-50 text-blue-600 rounded-lg sm:rounded-xl hover:bg-blue-100 transition-all duration-200 font-semibold text-xs sm:text-sm flex-shrink-0 group"
              >
                <span>View Details</span>
                <svg class="w-3 h-3 sm:w-4 sm:h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>
          </div>
        `;
      }).join('');
    }
    
    function openUserDetails(userId) {
      const user = allUsers.find(u => u.id === userId);
      if (!user) return;
      
      const userInitial = (user.full_name || user.email || 'U').charAt(0).toUpperCase();
      const avatarElement = document.getElementById('modal-user-avatar');
      avatarElement.textContent = userInitial;
      avatarElement.className = `w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-2xl`;
      
      document.getElementById('modal-user-name').textContent = user.full_name || user.email || 'Unknown User';
      document.getElementById('modal-user-email-header').textContent = user.email || 'No email';
      document.getElementById('modal-user-email').textContent = user.email || 'N/A';
      document.getElementById('modal-user-phone').textContent = user.phone || 'N/A';
      document.getElementById('modal-user-role').textContent = user.role || 'N/A';
      document.getElementById('modal-user-status').textContent = (user.status || 'N/A').replace('_', ' ');
      document.getElementById('modal-user-company').textContent = user.company_name || 'N/A';
      document.getElementById('modal-user-created').textContent = user.created_at ? new Date(user.created_at).toLocaleString() : 'N/A';
      document.getElementById('modal-user-id').textContent = user.id;
      
      document.getElementById('user-details-modal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
    
    function closeUserDetailsModal() {
      document.getElementById('user-details-modal').classList.add('hidden');
      document.body.style.overflow = '';
    }
    
    window.openUserDetails = openUserDetails;
    window.closeUserDetailsModal = closeUserDetailsModal;
    
    document.getElementById('user-search').addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      if (searchTerm === '') {
        renderUsers(allUsers);
        return;
      }
      
      const filtered = allUsers.filter(user => 
        (user.full_name || '').toLowerCase().includes(searchTerm) ||
        (user.email || '').toLowerCase().includes(searchTerm) ||
        (user.phone || '').toLowerCase().includes(searchTerm) ||
        (user.role || '').toLowerCase().includes(searchTerm)
      );
      
      renderUsers(filtered);
    });
    
    document.addEventListener('DOMContentLoaded', async () => {
      await waitForSupabase();
      await loadUsers();
    });
    
    document.getElementById('user-details-modal').addEventListener('click', (e) => {
      if (e.target.id === 'user-details-modal') {
        closeUserDetailsModal();
      }
    });
  </script>
</AdminLayout>

