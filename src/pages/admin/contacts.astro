---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Contacts - Admin Panel">
  <div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8 overflow-x-hidden">
    <div class="max-w-7xl mx-auto w-full">
      <!-- Header -->
      <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="min-w-0 flex-1">
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Contact Submissions</h1>
          <p class="mt-2 text-sm sm:text-base text-gray-600">View and manage contact form submissions</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 flex-shrink-0">
          <a 
            href="/admin" 
            class="bg-primary-600 hover:bg-primary-700 text-white px-4 sm:px-6 py-2 rounded-lg text-sm sm:text-base font-medium transition-colors text-center whitespace-nowrap"
          >
            Back to Dashboard
          </a>
          <a 
            href="/" 
            class="bg-gray-600 hover:bg-gray-700 text-white px-4 sm:px-6 py-2 rounded-lg text-sm sm:text-base font-medium transition-colors text-center whitespace-nowrap"
          >
            Back to Site
          </a>
        </div>
      </div>

      <!-- Content Area -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <!-- Search Bar -->
        <div class="mb-6">
          <div class="relative">
            <input 
              type="text" 
              id="email-search-input"
              placeholder="Search by email..."
              class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            />
            <svg class="absolute left-3 top-2.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        <div id="contacts-container">
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No contacts found</h3>
            <p class="mt-1 text-sm text-gray-500">Contact form submissions will appear here.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Details Modal -->
  <div id="contact-details-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-2xl max-h-[90vh] flex flex-col overflow-hidden">
      <div class="flex items-center justify-between p-4 md:p-5 border-b flex-shrink-0">
        <h3 class="text-xl md:text-2xl font-bold text-gray-900 break-words">Contact Submission Details</h3>
        <button 
          id="close-contact-modal"
          class="text-gray-400 hover:text-gray-600 transition-colors flex-shrink-0 ml-2"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div id="contact-details-content" class="overflow-y-auto p-4 md:p-5 space-y-4 flex-1 min-w-0">
        <!-- Details will be populated here -->
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  #contact-details-modal .bg-white {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  #contact-details-content * {
    word-wrap: break-word;
    overflow-wrap: break-word;
    max-width: 100%;
    box-sizing: border-box;
  }
  
  #contact-details-content p,
  #contact-details-content span,
  #contact-details-content div {
    word-break: break-word;
    overflow-wrap: break-word;
    white-space: pre-wrap;
  }
  
  #contact-details-content .bg-gray-50 {
    overflow: hidden;
  }
  
  /* Contact list cards - prevent overflow */
  #contacts-container .border {
    word-wrap: break-word;
    overflow-wrap: break-word;
  }
  
  #contacts-container * {
    word-wrap: break-word;
    overflow-wrap: break-word;
    max-width: 100%;
    box-sizing: border-box;
  }
  
  #contacts-container p,
  #contacts-container h4 {
    word-break: break-word;
    overflow-wrap: break-word;
  }
</style>

  <script>
    const SUPABASE_URL = 'https://tguopyxmlfxcalhfitob.supabase.co';
  const SUPABASE_ANON_KEY = 'sb_publishable_PGmzE71Xivse5zGMGbtQXQ_QBjLTr-A';

  let supabaseClient = null;

  // Initialize Supabase
  async function initSupabase() {
    try {
      if (window.supabaseClient && window.supabaseClient.from) {
        supabaseClient = window.supabaseClient;
        return;
      }

      if (window.supabase && window.supabase.createClient) {
        supabaseClient = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
      } else {
        let attempts = 0;
        while (attempts < 50 && !window.supabase) {
          await new Promise(resolve => setTimeout(resolve, 100));
          attempts++;
        }

        if (window.supabase && window.supabase.createClient) {
          supabaseClient = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        } else {
          throw new Error('Supabase library not available');
        }
      }

      // Restore session
      const sessionData = sessionStorage.getItem('simple-auth-session');
      if (sessionData && sessionData !== 'null' && sessionData !== '{}') {
        try {
          const session = JSON.parse(sessionData);
          if (session.access_token) {
            await supabaseClient.auth.setSession({
              access_token: session.access_token,
              refresh_token: session.refresh_token || ''
            });
          }
        } catch (e) {
          console.warn('Failed to restore session:', e);
        }
      }

      window.supabaseClient = supabaseClient;
    } catch (error) {
      console.error('❌ Failed to initialize Supabase:', error);
    }
  }

  let allContacts = [];

  // Load contacts from Supabase
  async function loadContacts() {
    if (!supabaseClient) {
      await initSupabase();
    }

    if (!supabaseClient) {
      console.error('❌ Supabase client not available');
      return;
    }

    const contactsContainer = document.getElementById('contacts-container');
    contactsContainer.innerHTML = '<div class="text-center py-8"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto"></div><p class="mt-4 text-gray-600">Loading contacts...</p></div>';

    try {
      const { data, error } = await supabaseClient
          .from('contact_submissions')
          .select('*')
          .order('created_at', { ascending: false });
        
      if (error) {
        console.error('❌ Error loading contacts:', error);
        contactsContainer.innerHTML = `<p class="text-red-600">Error loading contacts: ${error.message}</p>`;
        return;
      }

      if (!data || data.length === 0) {
        contactsContainer.innerHTML = `
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No contacts found</h3>
            <p class="mt-1 text-sm text-gray-500">Contact form submissions will appear here.</p>
          </div>
        `;
        allContacts = [];
          return;
        }
        
      allContacts = data;
      renderContacts(data);
      } catch (error) {
      console.error('❌ Error in loadContacts:', error);
      contactsContainer.innerHTML = `<p class="text-red-600">Error: ${error.message}</p>`;
    }
  }

  // Filter contacts by email
  function filterContactsByEmail(searchTerm) {
    if (!searchTerm || searchTerm.trim() === '') {
      renderContacts(allContacts);
        return;
      }
      
    const term = searchTerm.toLowerCase().trim();
    const filtered = allContacts.filter(contact => {
      const email = (contact.email || '').toLowerCase();
      return email.includes(term);
    });

    renderContacts(filtered);
  }

  // Render contacts list
  function renderContacts(contacts) {
    const contactsContainer = document.getElementById('contacts-container');
    contactsContainer.innerHTML = '';

    const contactsList = document.createElement('div');
    contactsList.className = 'space-y-4';

    // Store contacts globally for access
    if (!window.contactsData) {
      window.contactsData = {};
    }

    contacts.forEach((contact) => {
      const contactCard = document.createElement('div');
      contactCard.className = 'border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow overflow-hidden';
      
      const escapeHtml = (text) => {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      };
      
      // Store contact data by ID
      const contactId = contact.id || `contact-${Date.now()}-${Math.random()}`;
      window.contactsData[contactId] = contact;
      
      // Get name from first_name + last_name or name field
      const fullName = (contact.first_name && contact.last_name) 
        ? `${contact.first_name} ${contact.last_name}`.trim()
        : (contact.first_name || contact.last_name || contact.name || 'N/A');
      
      contactCard.innerHTML = `
        <div class="flex items-start justify-between gap-4 min-w-0">
          <div class="flex-1 min-w-0">
            <h4 class="font-semibold text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(fullName)}</h4>
            <p class="text-sm text-gray-600 mt-1 break-words overflow-wrap-anywhere">${escapeHtml(contact.email || 'N/A')}</p>
            ${contact.phone ? `<p class="text-sm text-gray-600 break-words overflow-wrap-anywhere">${escapeHtml(contact.phone)}</p>` : ''}
            ${contact.message ? `<p class="text-sm text-gray-700 mt-2 break-words overflow-wrap-anywhere word-break-break-word">${escapeHtml(contact.message.substring(0, 150))}${contact.message.length > 150 ? '...' : ''}</p>` : ''}
          </div>
          <div class="text-right flex flex-col items-end gap-2 flex-shrink-0">
            <p class="text-sm text-gray-500 whitespace-nowrap">${new Date(contact.created_at).toLocaleDateString()}</p>
            <button 
              onclick="openContactDetailsById('${contactId}')"
              class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors whitespace-nowrap"
            >
              View
            </button>
          </div>
        </div>
      `;

      contactsList.appendChild(contactCard);
    });

    contactsContainer.appendChild(contactsList);
  }

  // Open contact details modal by ID
  window.openContactDetailsById = function(contactId) {
    if (!window.contactsData || !window.contactsData[contactId]) {
      console.error('Contact not found:', contactId);
      return;
    }
    openContactDetails(window.contactsData[contactId]);
  };

  // Lock body scroll when modal is open
  function lockBodyScroll() {
    document.body.style.overflow = 'hidden';
  }

  // Unlock body scroll when modal is closed
  function unlockBodyScroll() {
    document.body.style.overflow = '';
  }

  // Open contact details modal
  function openContactDetails(contact) {
    const modal = document.getElementById('contact-details-modal');
    const content = document.getElementById('contact-details-content');
    
    if (!modal || !content) return;
    
    const escapeHtml = (text) => {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    };
    
    const formatDate = (dateString) => {
      if (!dateString) return 'N/A';
      const date = new Date(dateString);
      return date.toLocaleString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
    };
    
    // Get name from first_name + last_name or name field
    const fullName = (contact.first_name && contact.last_name) 
      ? `${contact.first_name} ${contact.last_name}`.trim()
      : (contact.first_name || contact.last_name || contact.name || 'N/A');
    
    content.innerHTML = `
      <div class="space-y-4">
        <!-- Personal Information -->
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <h4 class="text-lg font-semibold text-gray-900 mb-3">Personal Information</h4>
          <div class="space-y-2">
            <div>
              <span class="text-sm font-medium text-gray-600">Name:</span>
              <p class="text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(fullName)}</p>
            </div>
            ${contact.first_name ? `
              <div>
                <span class="text-sm font-medium text-gray-600">First Name:</span>
                <p class="text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(contact.first_name)}</p>
              </div>
            ` : ''}
            ${contact.last_name ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Last Name:</span>
                <p class="text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(contact.last_name)}</p>
              </div>
            ` : ''}
            <div>
              <span class="text-sm font-medium text-gray-600">Email:</span>
              <p class="text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(contact.email || 'N/A')}</p>
            </div>
            ${contact.phone ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Phone:</span>
                <p class="text-gray-900 break-words overflow-wrap-anywhere">${escapeHtml(contact.phone)}</p>
              </div>
            ` : ''}
            ${contact.phone_country_code ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Country Code:</span>
                <p class="text-gray-900">${escapeHtml(contact.phone_country_code)}</p>
              </div>
            ` : ''}
            ${contact.phone_number ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Phone Number:</span>
                <p class="text-gray-900">${escapeHtml(contact.phone_number)}</p>
              </div>
            ` : ''}
          </div>
        </div>

        <!-- Project Information -->
        ${contact.project_name || contact.project_type || contact.project_budget ? `
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Project Information</h4>
            <div class="space-y-2">
              ${contact.project_name ? `
                <div>
                  <span class="text-sm font-medium text-gray-600">Project Name:</span>
                  <p class="text-gray-900">${escapeHtml(contact.project_name)}</p>
                </div>
              ` : ''}
              ${contact.project_type ? `
                <div>
                  <span class="text-sm font-medium text-gray-600">Project Type:</span>
                  <p class="text-gray-900">${escapeHtml(contact.project_type)}</p>
                </div>
              ` : ''}
              ${contact.project_budget ? `
                <div>
                  <span class="text-sm font-medium text-gray-600">Budget:</span>
                  <p class="text-gray-900">${escapeHtml(contact.project_budget)}</p>
                </div>
              ` : ''}
            </div>
          </div>
        ` : ''}

        <!-- Message -->
        ${contact.message || contact.project_details ? `
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900 mb-3">Message / Project Details</h4>
            <p class="text-gray-700 whitespace-pre-wrap break-words overflow-wrap-anywhere word-break-break-word">${escapeHtml(contact.message || contact.project_details || 'N/A')}</p>
          </div>
        ` : ''}

        <!-- Additional Information -->
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <h4 class="text-lg font-semibold text-gray-900 mb-3">Additional Information</h4>
          <div class="space-y-2">
            <div>
              <span class="text-sm font-medium text-gray-600">Submitted:</span>
              <p class="text-gray-900">${formatDate(contact.created_at)}</p>
            </div>
            ${contact.updated_at && contact.updated_at !== contact.created_at ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Last Updated:</span>
                <p class="text-gray-900">${formatDate(contact.updated_at)}</p>
              </div>
            ` : ''}
            ${contact.id ? `
              <div>
                <span class="text-sm font-medium text-gray-600">Submission ID:</span>
                <p class="text-gray-900 font-mono text-xs">${escapeHtml(contact.id)}</p>
              </div>
            ` : ''}
          </div>
        </div>
      </div>
    `;
    
    modal.classList.remove('hidden');
    lockBodyScroll();
  };

  // Close contact details modal
  function closeContactModal() {
    const modal = document.getElementById('contact-details-modal');
    if (modal) {
      modal.classList.add('hidden');
      unlockBodyScroll();
    }
  }

  // Close modal when clicking outside
  document.addEventListener('click', (e) => {
    const modal = document.getElementById('contact-details-modal');
    if (modal && e.target === modal) {
      closeContactModal();
    }
  });

  // Close modal button
  document.addEventListener('DOMContentLoaded', () => {
    const closeBtn = document.getElementById('close-contact-modal');
    if (closeBtn) {
      closeBtn.addEventListener('click', closeContactModal);
    }
  });

  // Event listeners
  document.addEventListener('DOMContentLoaded', async () => {
    await initSupabase();
    loadContacts();

    // Search input listener
    const searchInput = document.getElementById('email-search-input');
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        filterContactsByEmail(e.target.value);
      });
    }
  });

  window.addEventListener('supabase-ready', async () => {
    await initSupabase();
    loadContacts();
  });
  </script>
