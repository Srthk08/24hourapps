---
import Layout from '../layouts/Layout.astro';
import AuthGuard from '../components/AuthGuard.astro';
---

<Layout title="My Orders - DevExpress">
  <AuthGuard>
    <section class="py-12 bg-gray-50 min-h-screen">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900">My Orders</h1>
          <p class="text-gray-600 mt-2">View your order history and track your projects</p>
        </div>

        <!-- Orders Summary -->
        <div id="orders-summary" class="hidden bg-white rounded-xl shadow-sm p-4 sm:p-6 mb-8">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div class="flex-1">
              <h2 class="text-lg font-semibold text-gray-900 mb-2">All Your Orders</h2>
              <p class="text-sm text-gray-600">
                <span id="total-orders-count" class="font-bold text-primary-600">0</span> 
                <span id="orders-summary-text">orders found</span>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500">Total Amount</p>
              <p class="text-2xl font-bold text-primary-600" id="total-orders-amount">‚Çπ0</p>
            </div>
          </div>
        </div>

        <!-- Recent Order Summary (replaces activity) -->
        <div id="recent-order-summary" class="hidden bg-white rounded-xl shadow-sm p-4 sm:p-6 mb-8">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div class="flex-1 min-w-0">
              <p class="text-sm text-gray-500 mb-1">Most recent order</p>
              <h3 class="text-base sm:text-lg font-semibold text-gray-900 truncate" id="recent-order-title">-</h3>
              <div class="mt-2 flex flex-wrap items-center gap-2 text-xs sm:text-sm text-gray-600">
                <span id="recent-order-amount" class="font-semibold text-gray-900">‚Çπ0</span>
                <span class="hidden sm:inline">‚Ä¢</span>
                <span id="recent-order-date" class="break-words">-</span>
                <span class="hidden sm:inline">‚Ä¢</span>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-green-100 text-green-800 text-xs font-medium whitespace-nowrap" id="recent-order-status">Completed</span>
              </div>
            </div>
            <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-2 sm:gap-3 sm:flex-shrink-0">
              <a href="/products" class="inline-flex items-center justify-center px-4 py-2 rounded-md bg-gray-100 text-gray-800 hover:bg-gray-200 transition-colors text-sm sm:text-base whitespace-nowrap">Browse Products</a>
              <button type="button" id="recent-order-view-btn" class="inline-flex items-center justify-center px-4 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm sm:text-base whitespace-nowrap">View Order</button>
            </div>
          </div>
        </div>

        <!-- Orders Content -->
        <div id="orders-content">
          <!-- Success Redirect Check -->
          <script>
            // Check for success parameter and redirect to order-success page
            document.addEventListener('DOMContentLoaded', function() {
              const urlParams = new URLSearchParams(window.location.search);
              const order = urlParams.get('order');
              const product = urlParams.get('product');
              
              if (order === 'success') {
                console.log(' Order success detected, redirecting to congratulations page...');
                window.location.href = '/order-success?product=' + (product || 'order-menu-system');
                return;
              }
            });
          </script>
          
          <!-- Loading State -->
          <div id="loading-orders" class="text-center py-16">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </div>
            <p class="text-gray-600">Loading your orders...</p>
          </div>

          <!-- Empty Orders State -->
          <div id="empty-orders" class="hidden text-center py-16">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">No orders yet</h2>
            <p class="text-gray-600 mb-6">You haven't placed any orders yet. Browse our products and submit your requirements to see your orders here.</p>
            <div class="space-y-4">
              <a href="/products" class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium px-8 py-3 rounded-lg transition-all transform hover:scale-105 shadow-lg hover:shadow-xl">
                Browse Products
              </a>
              <div class="text-sm text-gray-500">
                <p>Orders will appear here after you:</p>
                <ul class="mt-2 space-y-1">
                  <li>‚Ä¢ Select a product from our catalog</li>
                  <li>‚Ä¢ Fill out the project requirements form</li>
                  <li>‚Ä¢ Submit your project details</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Orders List -->
          <div id="orders-list" class="hidden space-y-6">
            <!-- Order Template -->
            <div id="order-template" class="hidden bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="p-6">
                <!-- Order Header -->
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 order-project-name">Project Name</h3>
                    <p class="text-gray-600 order-project-description">Project description</p>
                  </div>
                  <div class="mt-4 sm:mt-0 text-right">
                    <div class="text-2xl font-bold text-primary-600 order-total">‚Çπ0</div>
                    <div class="text-sm text-gray-500 order-date">Order Date</div>
                    <div class="text-xs text-gray-400 order-id">Order ID: -</div>
                    <div class="mt-2">
                      <span class="order-status-badge inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        ‚úì Order Confirmed
                      </span>
                    </div>
                  </div>
                </div>

                <!-- View Order Button -->
                <div class="border-t border-gray-200 pt-6">
                  <button type="button" class="order-view-btn w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm sm:text-base">View Order</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Order Details Modal -->
          <div id="order-details-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
            <div class="absolute inset-0 bg-black bg-opacity-40" id="order-modal-backdrop"></div>
            <div class="relative min-h-screen flex items-center justify-center p-4">
              <div class="relative max-w-2xl w-full mx-auto mt-8 mb-8 bg-white rounded-xl shadow-xl overflow-hidden">
                <div class="p-4 sm:p-6 border-b flex items-center justify-between">
                  <h3 class="text-lg sm:text-xl font-semibold text-gray-900 pr-2" id="order-modal-title">Order Details</h3>
                  <button type="button" id="order-modal-close" class="text-gray-500 hover:text-gray-700 text-2xl leading-none flex-shrink-0">‚úï</button>
                </div>
                <div class="p-4 sm:p-6 space-y-4 max-h-[calc(100vh-200px)] overflow-y-auto">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="flex-1">
                      <p class="text-xs sm:text-sm text-gray-500">Amount</p>
                      <p class="text-xl sm:text-2xl font-bold text-primary-600 break-words" id="order-modal-amount">‚Çπ0</p>
                    </div>
                    <div class="flex-1 sm:text-right">
                      <p class="text-xs sm:text-sm text-gray-500">Date</p>
                      <p class="text-xs sm:text-sm font-medium text-gray-900 break-words" id="order-modal-date">-</p>
                    </div>
                  </div>
                  <div>
                    <p class="text-xs sm:text-sm text-gray-500 mb-1">Order ID</p>
                    <p class="text-xs sm:text-sm font-mono text-gray-800 break-all" id="order-modal-id">-</p>
                  </div>
                  <div>
                    <h4 class="text-xs sm:text-sm font-semibold text-gray-800 mb-2">Contact</h4>
                    <div class="text-xs sm:text-sm text-gray-700 space-y-1 break-words">
                      <div>Person: <span id="order-modal-contact" class="break-words">-</span></div>
                      <div>Email: <span id="order-modal-email" class="break-all">-</span></div>
                      <div>Phone: <span id="order-modal-phone" class="break-words">-</span></div>
                    </div>
                  </div>
                </div>
                <div class="p-4 border-t bg-gray-50 flex justify-end sm:justify-end">
                  <button type="button" id="order-modal-close-bottom" class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 transition-colors text-sm sm:text-base">Close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </AuthGuard>
</Layout>

<script>
  // Authentication handled by AuthGuard component

  // Orders functionality
  class Orders {
    constructor() {
      this.orders = [];
      this.init();
    }

    init() {
      this.loadOrders().then(() => this.renderOrders());
    }

    async loadOrders() {
      // Load orders from multiple localStorage sources
      const projectRequirements = localStorage.getItem('project-requirements');
      const orderMenuRequirements = localStorage.getItem('order-menu-requirements');
      const userOrders = localStorage.getItem('user-orders');
      
      console.log('Loading orders from multiple sources...');
      console.log('Project requirements:', projectRequirements);
      console.log('Order menu requirements:', orderMenuRequirements);
      console.log('User orders:', userOrders);
      
      this.orders = [];
      
      // Get current user from multiple sources (priority order)
      let currentUser = null;
      
      // Source 1: sessionStorage (most recent)
      try {
        const sessionData = sessionStorage.getItem('simple-auth-session');
        if (sessionData && sessionData !== 'null' && sessionData !== '{}') {
          const session = JSON.parse(sessionData);
          if (session && session.user && session.user.email) {
            currentUser = session.user;
            console.log('‚úÖ Found user in sessionStorage:', currentUser.email);
          }
        }
      } catch (e) {
        console.warn('Error reading sessionStorage:', e);
      }
      
      // Source 2: localStorage (fallback)
      if (!currentUser) {
        try {
          const localUserData = localStorage.getItem('simple-auth-user');
          if (localUserData && localUserData !== 'null' && localUserData !== '{}') {
            currentUser = JSON.parse(localUserData);
            if (currentUser && currentUser.email) {
              console.log('‚úÖ Found user in localStorage:', currentUser.email);
            } else {
              currentUser = null;
            }
          }
        } catch (e) {
          console.warn('Error reading localStorage:', e);
        }
      }
      
      // Source 3: Auth Manager
      if (!currentUser) {
        const authManager = window.globalAuthManager || window.simpleAuthManager;
        if (authManager && authManager.isUserLoggedIn && authManager.isUserLoggedIn()) {
          currentUser = authManager.getCurrentUser();
          if (currentUser && currentUser.email) {
            console.log('‚úÖ Found user in auth manager:', currentUser.email);
          } else {
            currentUser = null;
          }
        }
      }
      
      // Source 4: Supabase auth (last resort)
      if (!currentUser) {
        try {
          const { supabase } = await import('../lib/supabase');
          const { data: { user } } = await supabase.auth.getUser();
          if (user && user.email) {
            currentUser = { email: user.email, id: user.id };
            console.log('‚úÖ Found user in Supabase auth:', currentUser.email);
          }
        } catch (e) {
          console.warn('Supabase auth fallback failed:', e);
        }
      }
      
      if (!currentUser || !currentUser.email) {
        console.error('‚ùå No user email available ‚Äì cannot load orders');
        console.error('Current user object:', currentUser);
        console.error('Available storage:');
        console.error('  - sessionStorage simple-auth-session:', sessionStorage.getItem('simple-auth-session'));
        console.error('  - localStorage simple-auth-user:', localStorage.getItem('simple-auth-user'));
        console.error('  - window.globalAuthManager:', !!window.globalAuthManager);
        console.error('  - window.simpleAuthManager:', !!window.simpleAuthManager);
        return;
      }

      // Normalize to a plain email string for downstream queries/filters (lowercase for consistent matching)
      const userEmail = currentUser.email.toLowerCase().trim();
      console.log('‚úÖ User email detected:', userEmail);
      console.log('üìß Loading orders for user email:', userEmail);
      
      // Load project requirements as orders (filter by email if available)
      if (projectRequirements) {
        try {
          const projectOrders = JSON.parse(projectRequirements);
          const filteredProjectOrders = projectOrders.filter(order => {
            // If order has email/userId, filter by it; otherwise include all (for backward compatibility)
            if (order.email || order.userId || order.contactEmail) {
              const orderEmail = (order.email || order.userId || order.contactEmail)?.toLowerCase().trim();
              return orderEmail === userEmail;
            }
            // If no email field, include it (might be old format)
            return true;
          });
          console.log(`üì¶ Loading ${filteredProjectOrders.length} project orders from localStorage (filtered from ${projectOrders.length} total)`);
          filteredProjectOrders.forEach(order => {
            this.orders.push({
              ...order,
              orderId: `PROJ-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`,
              orderDate: order.timestamp || new Date().toISOString(),
              total: this.extractPrice(order.productPrice) || 0,
              projectName: order.productName || 'Custom Project',
              description: order.productDescription || 'Professional digital solution',
              requirements: order,
              status: 'completed'
            });
          });
        } catch (error) {
          console.error('Error parsing project requirements:', error);
        }
      }
      
      // Load order menu requirements as orders (filter by email if available)
      if (orderMenuRequirements) {
        try {
          const orderMenuOrders = JSON.parse(orderMenuRequirements);
          const filteredMenuOrders = orderMenuOrders.filter(order => {
            // If order has email/userId, filter by it; otherwise include all (for backward compatibility)
            if (order.email || order.userId || order.contactEmail) {
              const orderEmail = (order.email || order.userId || order.contactEmail)?.toLowerCase().trim();
              return orderEmail === userEmail;
            }
            // If no email field, include it (might be old format)
            return true;
          });
          console.log(`üì¶ Loading ${filteredMenuOrders.length} menu orders from localStorage (filtered from ${orderMenuOrders.length} total)`);
          filteredMenuOrders.forEach(order => {
            this.orders.push({
              ...order,
              orderId: `MENU-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`,
              orderDate: order.timestamp || new Date().toISOString(),
              total: this.extractPrice(order.productPrice) || 0,
              projectName: order.productName || 'Order Menu System',
              description: order.productDescription || 'Complete order management system',
              requirements: order,
              status: 'completed'
            });
          });
        } catch (error) {
          console.error('Error parsing order menu requirements:', error);
        }
      }
      
      // Load user orders (if any) - filter by email (case-insensitive)
      if (userOrders) {
        try {
          const userOrdersData = JSON.parse(userOrders);
          const filteredOrders = userOrdersData.filter(order => {
            const orderUserId = (order.userId || order.email || order.userEmail)?.toLowerCase().trim();
            return orderUserId === userEmail;
          });
          console.log(`üì¶ Loading ${filteredOrders.length} user orders from localStorage (filtered from ${userOrdersData.length} total)`);
          this.orders.push(...filteredOrders);
        } catch (error) {
          console.error('Error parsing user orders:', error);
        }
      }

      // Load Supabase-backed orders and customizations for this user
      try {
        await this.loadSupabaseOrders(userEmail);
      } catch (e) {
        console.warn('Failed to load Supabase orders:', e);
      }
      
      // Sort newest first
      this.orders.sort((a, b) => new Date(b.orderDate).getTime() - new Date(a.orderDate).getTime());
      
      console.log(' TOTAL ORDERS LOADED:', this.orders.length);
      console.log('üìã Order IDs:', this.orders.map(o => o.orderId));
      console.log('üìã Order details:', this.orders.map(o => ({
        id: o.orderId,
        project: o.projectName,
        status: o.status,
        date: o.orderDate,
        total: o.total
      })));
      
      // Log breakdown by source for debugging
      const ordersBySource = {
        localStorage: this.orders.filter(o => o.orderId?.startsWith('PROJ-') || o.orderId?.startsWith('MENU-')).length,
        supabase_customization_forms: this.orders.filter(o => o.orderId?.startsWith('CF-') || (!o.orderId?.startsWith('PROJ-') && !o.orderId?.startsWith('MENU-') && !o.orderId?.startsWith('CART-'))).length
      };
      console.log(' Orders breakdown by source:', ordersBySource);
    }

    async loadSupabaseOrders(userEmail) {
      try {
        // Wait for Supabase to be ready
        let supabase = null;
        
        // Try to get Supabase from window (from Layout.astro)
        if (window.supabase && window.supabase.from) {
          supabase = window.supabase;
          console.log('‚úÖ Using window.supabase client');
        } else if (window.supabaseClient && window.supabaseClient.from) {
          supabase = window.supabaseClient;
          console.log('‚úÖ Using window.supabaseClient');
        } else {
          // Wait for Supabase to be ready (max 5 seconds)
          console.log('‚è≥ Waiting for Supabase to be ready...');
          let attempts = 0;
          const maxAttempts = 50; // 50 * 100ms = 5 seconds
          
          while (attempts < maxAttempts && !supabase) {
            if (window.supabase && window.supabase.from) {
              supabase = window.supabase;
              console.log('‚úÖ Supabase ready after waiting');
              break;
            } else if (window.supabaseClient && window.supabaseClient.from) {
              supabase = window.supabaseClient;
              console.log('‚úÖ SupabaseClient ready after waiting');
              break;
            }
            await new Promise(resolve => setTimeout(resolve, 100));
            attempts++;
          }
          
          // If still not ready, try importing directly
          if (!supabase) {
            console.log('‚ö†Ô∏è Window Supabase not ready, trying direct import...');
            const supabaseModule = await import('../lib/supabase');
            supabase = supabaseModule.supabase;
            console.log('‚úÖ Using imported Supabase client');
          }
        }
        
        if (!supabase || !supabase.from) {
          console.error('‚ùå Supabase client not available');
          return;
        }
        
        console.log('üì¶ Loading Supabase orders for email:', userEmail);
        
        // Only querying customization_forms table (order_customizations and cart_customizations don't exist)
        const seenIds = new Set(); // Track IDs to avoid duplicates

        // Fetch customization_forms (for all products: restaurant-website, streaming-mobile-app, android-tv-app, restaurant-menu-system)
        console.log('üîç Querying customization_forms table for email:', userEmail);
        
        // First, let's test if we can query the table at all (get first 5 records for debugging)
        const { data: testData, error: testError } = await supabase
          .from('customization_forms')
          .select('*')
          .limit(5);
        
        if (testError) {
          console.error('‚ùå Cannot query customization_forms table:', testError);
        } else {
          console.log('‚úÖ customization_forms table is accessible. Sample records:', testData?.length || 0);
          if (testData && testData.length > 0) {
            console.log('üìã Sample record structure:', {
              id: testData[0].id,
              email_fields: {
                customer_email: testData[0].customer_email,
                contact_email: testData[0].contact_email
              },
              product_name: testData[0].product_name
            });
          }
        }
        
        let customForms = [];
        const seenFormIds = new Set();
        
        // Only query fields that exist: customer_email and contact_email
        // email and user_email columns don't exist in customization_forms table
        
        // Try customer_email field - use eq for exact match (case-insensitive with ilike)
        console.log('üîç Querying with customer_email field for:', userEmail);
        const { data: data2, error: err2 } = await supabase
          .from('customization_forms')
          .select('*')
          .ilike('customer_email', `%${userEmail}%`)
          .order('created_at', { ascending: false });
        if (!err2 && data2) {
          console.log('üìä Query result - customer_email:', data2.length, 'records found');
          if (data2.length > 0) {
            console.log('üìã Sample customer_email values:', data2.slice(0, 3).map(f => f.customer_email));
            data2.forEach(f => { 
              if (!seenFormIds.has(f.id)) { 
                customForms.push(f); 
                seenFormIds.add(f.id); 
                console.log('  ‚ûï Added form:', f.id, '- email:', f.customer_email);
              } 
            });
            console.log('‚úÖ Found', data2.length, 'orders using customer_email field');
          } else {
            console.log('‚ÑπÔ∏è No orders found with customer_email field matching:', userEmail);
          }
        } else if (err2) {
          console.warn('‚ö†Ô∏è Error querying customer_email field:', err2.message);
        }
        
        // Try contact_email field
        console.log('üîç Querying with contact_email field for:', userEmail);
        const { data: data4, error: err4 } = await supabase
          .from('customization_forms')
          .select('*')
          .ilike('contact_email', `%${userEmail}%`)
          .order('created_at', { ascending: false });
        if (!err4 && data4) {
          console.log('üìä Query result - contact_email:', data4.length, 'records found');
          if (data4.length > 0) {
            console.log('üìã Sample contact_email values:', data4.slice(0, 3).map(f => f.contact_email));
            data4.forEach(f => { 
              if (!seenFormIds.has(f.id)) { 
                customForms.push(f); 
                seenFormIds.add(f.id); 
                console.log('  ‚ûï Added form:', f.id, '- email:', f.contact_email);
              } 
            });
            console.log('‚úÖ Found', data4.length, 'orders using contact_email field');
          } else {
            console.log('‚ÑπÔ∏è No orders found with contact_email field matching:', userEmail);
          }
        } else if (err4) {
          console.warn('‚ö†Ô∏è Error querying contact_email field:', err4.message);
        }
        
        console.log('üìä Total customization_forms found after all queries:', customForms.length);
        
        // If no orders found with email match, try fetching all records and filter client-side
        // This helps debug if the issue is with the query or the data
        if (customForms.length === 0) {
          console.log('‚ö†Ô∏è No orders found with email queries. Trying to fetch all records for debugging...');
          const { data: allForms, error: allError } = await supabase
            .from('customization_forms')
            .select('*')
            .order('created_at', { ascending: false })
            .limit(100);
          
          if (!allError && allForms && allForms.length > 0) {
            console.log('üìã Found', allForms.length, 'total records in customization_forms table');
            // Filter client-side by email (only check fields that exist)
            const matchingForms = allForms.filter(form => {
              const formEmail = (form.customer_email || form.contact_email || '').toLowerCase().trim();
              return formEmail === userEmail || formEmail.includes(userEmail) || userEmail.includes(formEmail);
            });
            console.log('üìã After client-side filtering, found', matchingForms.length, 'matching records');
            if (matchingForms.length > 0) {
              customForms = matchingForms;
              console.log('‚úÖ Using client-side filtered results');
            } else {
              console.log('‚ÑπÔ∏è No matching records found even after fetching all records');
              console.log('üí° User email being searched:', userEmail);
              console.log('üí° Sample emails in table:', allForms.slice(0, 3).map(f => ({
                customer_email: f.customer_email,
                contact_email: f.contact_email
              })));
            }
          } else if (allError) {
            console.error('‚ùå Error fetching all records:', allError);
          }
        }
        
        // Process all found customization forms
        if (customForms && customForms.length > 0) {
          console.log('üì¶ Processing', customForms.length, 'customization_forms...');
          let addedCount = 0;
          customForms.forEach((form, index) => {
            // Check for duplicates using the form ID
            const formId = form.id || `CF-${Date.now()}-${index}`;
            if (seenIds.has(formId)) {
              console.log(`  ‚ö†Ô∏è Skipping duplicate customization form: ${formId}`);
              return;
            }
            seenIds.add(formId);
            
            console.log(`  ‚úÖ Custom Form ${index + 1}/${customForms.length}:`, {
              id: form.id,
              project_name: form.project_name,
              product_name: form.product_name,
              email: form.customer_email || form.contact_email,
              status: form.status,
              price: form.price || form.product_price,
              created_at: form.created_at
            });
            
            // Extract price from price field (numeric) or product_price field (might be string like "‚Çπ1,000")
            let totalPrice = 0;
            if (form.price) {
              totalPrice = Number(form.price) || 0;
            } else if (form.product_price) {
              const priceMatch = String(form.product_price).match(/‚Çπ?([\d,]+)/);
              if (priceMatch) {
                totalPrice = parseInt(priceMatch[1].replace(/,/g, ''));
              }
            }
            
            const orderData = {
              orderId: formId,
              orderDate: form.created_at || new Date().toISOString(),
              total: totalPrice,
              projectName: form.product_name || form.project_name || 'Custom Project',
              description: form.product_description || 'Professional digital solution',
              status: form.status || 'pending',
              // Store additional_requirements at both levels for easy access
              additionalRequirements: form.additional_requirements || '',
              additional_requirements: form.additional_requirements || '',
              requirements: {
                projectName: form.project_name,
                contactPerson: form.contact_person || form.customer_name,
                restaurantName: form.restaurant_name,
                cuisineType: form.cuisine_type,
                email: form.customer_email || form.contact_email,
                phone: form.contact_phone || form.phone,
                additionalRequirements: form.additional_requirements || '',
                additional_requirements: form.additional_requirements || '',
                primaryColor: form.primary_color,
                secondaryColor: form.secondary_color,
                accentColor: form.accent_color,
                textColor: form.text_color,
                appName: form.app_name,
                productType: form.product_type
              }
            };
            
            this.orders.push(orderData);
            addedCount++;
            console.log(`  ‚ûï Added order ${addedCount}/${customForms.length}:`, {
              orderId: orderData.orderId,
              projectName: orderData.projectName,
              total: '‚Çπ' + orderData.total,
              status: orderData.status
            });
          });
          console.log('‚úÖ Successfully added', addedCount, 'orders from customization_forms to orders list');
          console.log('üìä Total orders in this.orders array:', this.orders.length);
          console.log('üìã Order IDs:', this.orders.map(o => o.orderId));
        } else {
          console.log('‚ÑπÔ∏è No customization_forms found for user email:', userEmail);
          console.log('üí° Make sure the email in customization_forms matches:', userEmail);
          console.log('üí° Check browser console for detailed query logs');
        }
        
        console.log('‚úÖ loadSupabaseOrders completed. Total orders in this.orders:', this.orders.length);
      } catch (error) {
        console.error('‚ùå Error loading Supabase orders:', error);
        console.error('Error details:', error.message, error.stack);
        // Don't throw - continue with other order sources
        console.log('‚ö†Ô∏è Continuing with other order sources despite error');
      }
    }
    
    extractPrice(priceString) {
      if (!priceString) return 0;
      const match = priceString.match(/‚Çπ?([\d,]+)/);
      if (match) {
        return parseInt(match[1].replace(/,/g, ''));
      }
      return 0;
    }

    renderOrders() {
      const loadingOrders = document.getElementById('loading-orders');
      const emptyOrders = document.getElementById('empty-orders');
      const ordersList = document.getElementById('orders-list');

      console.log('üé® Rendering orders. Total orders count:', this.orders.length);
      console.log('üé® Orders to render:', this.orders.map(o => ({ id: o.orderId, name: o.projectName })));

      // Hide loading immediately and show appropriate state
      loadingOrders?.classList.add('hidden');

      if (this.orders.length === 0) {
        console.log(' No orders found, showing empty state');
        emptyOrders?.classList.remove('hidden');
        ordersList?.classList.add('hidden');
        // Hide summaries when there are no orders
        const ordersSummary = document.getElementById('orders-summary');
        ordersSummary?.classList.add('hidden');
        const recentActivity = document.getElementById('recent-activity');
        recentActivity?.classList.add('hidden');
        return;
      }

      console.log(' Orders found, showing orders list');
      console.log(' Removing hidden class from orders-list');
      emptyOrders?.classList.add('hidden');
      ordersList?.classList.remove('hidden');
      
      // Force show the orders list (in case CSS is hiding it)
      if (ordersList) {
        // Remove hidden class and ensure it's visible
        ordersList.classList.remove('hidden');
        ordersList.style.display = 'block';
        ordersList.style.visibility = 'visible';
        ordersList.style.opacity = '1';
        console.log(' Orders list container is now visible');
        console.log(' Orders list classes:', ordersList.className);
        console.log(' Orders list display style:', ordersList.style.display);
      }

      console.log(' Calling renderOrdersList() to render all orders...');
      this.renderOrdersList();

      // Verify orders were rendered (exclude the template itself)
      const renderedOrders = ordersList?.querySelectorAll('[id^="order-"]:not(#order-template)');
      const renderedCount = renderedOrders?.length || 0;
      console.log(' RENDERED ORDERS COUNT:', renderedCount);
      console.log(' Expected orders count:', this.orders.length);
      console.log(' Total children in container:', ordersList?.children.length || 0);
      
      if (renderedCount !== this.orders.length) {
        console.error(' MISMATCH: Expected', this.orders.length, 'orders but only', renderedCount, 'were rendered!');
      } else {
        console.log(' SUCCESS: All', renderedCount, 'orders rendered correctly!');
      }

      // Update orders summary
      this.renderOrdersSummary();

      // Update recent summary visibility/content
      this.renderRecentSummary();
    }

    renderOrdersList() {
      const ordersListContainer = document.getElementById('orders-list');
      if (!ordersListContainer) {
        console.error(' orders-list container not found!');
        return;
      }

      // Get the template BEFORE clearing innerHTML
      let template = document.getElementById('order-template');
      if (!template) {
        console.error(' Order template not found before clearing!');
        // Try to wait a bit and retry (in case of timing issues)
        setTimeout(() => {
          template = document.getElementById('order-template');
          if (!template) {
            console.error(' Order template still not found after retry!');
            return;
          }
          // Retry rendering with the found template
          this.renderOrdersListWithTemplate(template, ordersListContainer);
        }, 100);
        return;
      }

      this.renderOrdersListWithTemplate(template, ordersListContainer);
    }

    renderOrdersListWithTemplate(template, ordersListContainer) {
      if (!template || !ordersListContainer) {
        console.error(' Template or container not available!');
        return;
      }

      console.log('üßπ Clearing orders list container (preserving template)...');
      
      // Clear only the rendered orders, not the template
      const existingOrders = ordersListContainer.querySelectorAll('[id^="order-"]:not(#order-template)');
      existingOrders.forEach(order => order.remove());
      
      console.log('üìù Rendering', this.orders.length, 'orders...');
      this.orders.forEach((order, index) => {
        console.log(`  üì¶ Rendering order ${index + 1}/${this.orders.length}:`, order.orderId, '-', order.projectName);
        const orderElement = this.createOrderElement(order, index, template);
        if (orderElement) {
          ordersListContainer.appendChild(orderElement);
          console.log(`   Order ${index + 1} appended successfully`);
        } else {
          console.error(`   Failed to create element for order ${index + 1}`);
        }
      });
      
      console.log(' Finished rendering all orders. Container now has', ordersListContainer.children.length, 'children');
    }

    createOrderElement(order, index, template) {
      // Use the passed template reference, or try to find it if not provided
      if (!template) {
        template = document.getElementById('order-template');
        if (!template) {
          console.error(' Order template not found when creating order element!');
          console.error(' Attempted to create order:', index, order.orderId);
          return null;
        }
      }

      const clone = template.cloneNode(true);
      clone.classList.remove('hidden');
      clone.id = `order-${index}`;
      
      // Ensure the cloned element is visible
      clone.style.display = 'block';
      clone.style.visibility = 'visible';
      clone.style.opacity = '1';
      
      return this.populateOrderElement(clone, order);
    }
    
    populateOrderElement(clone, order) {

      // Set order details
      clone.querySelector('.order-project-name').textContent = order.projectName || 'Custom Project';
      clone.querySelector('.order-project-description').textContent = order.description || 'Professional digital solution';
      clone.querySelector('.order-total').textContent = `‚Çπ${order.total?.toLocaleString() || '0'}`;
      clone.querySelector('.order-date').textContent = this.formatDate(order.orderDate);
      clone.querySelector('.order-id').textContent = order.orderId || `ORD-${Date.now()}`;

      // Update order status badge
      const statusBadge = clone.querySelector('.order-status-badge');
      if (statusBadge) {
        const statusText = (order.status || 'pending').charAt(0).toUpperCase() + (order.status || 'pending').slice(1).replace('_', ' ');
        const statusIcon = order.status === 'completed' ? '‚úì ' : order.status === 'cancelled' ? '‚úó ' : order.status === 'in_progress' ? '‚ü≥ ' : '';
        statusBadge.textContent = statusIcon + statusText;
        statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ' + this.getStatusColor(order.status);
      }

      // Add click handler for View Order button
      const viewBtn = clone.querySelector('.order-view-btn');
      if (viewBtn) {
        viewBtn.onclick = () => {
          this.showOrderDetails(order);
        };
      }

      return clone;
    }

    formatDate(dateString) {
      if (!dateString) return 'N/A';
      const date = new Date(dateString);
      return date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      });
    }

    // Get status color classes
    getStatusColor(status) {
      const statusLower = (status || '').toLowerCase();
      const colors = {
        'pending': 'bg-yellow-100 text-yellow-800',
        'confirmed': 'bg-blue-100 text-blue-800',
        'in_progress': 'bg-purple-100 text-purple-800',
        'processing': 'bg-purple-100 text-purple-800',
        'completed': 'bg-green-100 text-green-800',
        'cancelled': 'bg-red-100 text-red-800'
      };
      return colors[statusLower] || 'bg-gray-100 text-gray-800';
    }

    // Render the Orders Summary showing all orders
    renderOrdersSummary() {
      const summary = document.getElementById('orders-summary');
      const countEl = document.getElementById('total-orders-count');
      const summaryTextEl = document.getElementById('orders-summary-text');
      const amountEl = document.getElementById('total-orders-amount');
      
      if (!summary || !countEl || !summaryTextEl || !amountEl) return;

      const totalOrders = this.orders.length;
      const totalAmount = this.orders.reduce((sum, order) => sum + (Number(order.total) || 0), 0);

      if (totalOrders === 0) {
        summary.classList.add('hidden');
        return;
      }

      summary.classList.remove('hidden');
      countEl.textContent = totalOrders;
      summaryTextEl.textContent = totalOrders === 1 ? 'order found' : 'orders found';
      amountEl.textContent = `‚Çπ${totalAmount.toLocaleString('en-IN')}`;
      
      console.log(' Orders Summary:', {
        totalOrders: totalOrders,
        totalAmount: totalAmount
      });
    }

    // Render the Recent Order Summary based on the newest order (any status)
    renderRecentSummary() {
      const summary = document.getElementById('recent-order-summary');
      const titleEl = document.getElementById('recent-order-title');
      const amountEl = document.getElementById('recent-order-amount');
      const dateEl = document.getElementById('recent-order-date');
      const statusEl = document.getElementById('recent-order-status');
      const viewBtn = document.getElementById('recent-order-view-btn');
      if (!summary || !titleEl || !amountEl || !dateEl || !statusEl || !viewBtn) return;

      // Get the most recent order (any status)
      const sortedOrders = [...this.orders]
        .sort((a, b) => new Date(b.orderDate).getTime() - new Date(a.orderDate).getTime());

      if (sortedOrders.length === 0) {
        summary.classList.add('hidden');
        return;
      }

      const latest = sortedOrders[0];
      summary.classList.remove('hidden');
      titleEl.textContent = latest.projectName || 'Order';
      amountEl.textContent = `‚Çπ${(latest.total || 0).toLocaleString('en-IN')}`;
      dateEl.textContent = this.formatDate(latest.orderDate);
      
      // Update status badge with correct text and colors
      const statusText = (latest.status || 'pending').charAt(0).toUpperCase() + (latest.status || 'pending').slice(1).replace('_', ' ');
      statusEl.textContent = statusText;
      // Remove all status color classes and add the correct one
      statusEl.className = 'inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium whitespace-nowrap ' + this.getStatusColor(latest.status);
      
      // Open modal with latest order details on click
      viewBtn.onclick = () => {
        this.showOrderDetails(latest);
      };
    }

    showOrderDetails(order) {
      const modal = document.getElementById('order-details-modal');
      if (!modal) return;
      const byId = (id) => document.getElementById(id);
      byId('order-modal-title').textContent = order.projectName || 'Order Details';
      byId('order-modal-amount').textContent = `‚Çπ${(order.total || 0).toLocaleString('en-IN')}`;
      byId('order-modal-date').textContent = this.formatDate(order.orderDate);
      byId('order-modal-id').textContent = order.orderId || '-';
      const req = order.requirements || {};
      byId('order-modal-contact').textContent = req.contactPerson || req.contact_person || '-';
      byId('order-modal-email').textContent = req.email || '-';
      byId('order-modal-phone').textContent = req.phone || req.contact_phone || '-';

      // Lock body scroll
      document.body.style.overflow = 'hidden';
      modal.classList.remove('hidden');

      const closeFns = () => {
        modal.classList.add('hidden');
        // Unlock body scroll
        document.body.style.overflow = '';
      };
      const backdrop = document.getElementById('order-modal-backdrop');
      const closeTop = document.getElementById('order-modal-close');
      const closeBottom = document.getElementById('order-modal-close-bottom');
      backdrop.onclick = closeFns;
      closeTop.onclick = closeFns;
      closeBottom.onclick = closeFns;
    }
  }

  // Initialize orders when page loads
  let ordersInstance = null;
  
  const initializeOrders = () => {
    if (!ordersInstance) {
      console.log('üîÑ Initializing Orders...');
      ordersInstance = new Orders();
    } else {
      console.log('üîÑ Reloading orders...');
      // Reload orders if instance already exists
      ordersInstance.loadOrders().then(() => ordersInstance.renderOrders());
    }
  };
  
  document.addEventListener('DOMContentLoaded', () => {
    // Initialize immediately
    initializeOrders();
    
    // Also listen for supabase-ready event to reload orders
    window.addEventListener('supabase-ready', () => {
      console.log('‚úÖ Supabase ready event received, reloading orders...');
      setTimeout(() => {
        initializeOrders();
      }, 500);
    });
    
    // Show success message if redirected from payment
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('order') === 'success') {
      showSuccessMessage();
      // Clear the URL parameter
      window.history.replaceState({}, document.title, window.location.pathname);
    }
  });

  function showSuccessMessage() {
    // Create success message
    const successDiv = document.createElement('div');
    successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300';
    successDiv.innerHTML = `
      <div class="flex items-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>Order placed successfully! üéâ</span>
      </div>
    `;
    
    document.body.appendChild(successDiv);
    
    // Remove after 5 seconds
    setTimeout(() => {
      successDiv.remove();
    }, 5000);
  }
</script>