</Layout>

<script>
  import { createClient } from '@supabase/supabase-js';

  const SUPABASE_URL = 'https://tguopyxmlfxcalhfitob.supabase.co';
  const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRndW9weXhtbGZ4Y2FsaGZpdG9iIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQyMTk3NDQsImV4cCI6MjA3OTc5NTc0NH0.GUtJWVu8i6NWoleXI_Fd-ePM4vOFQtulyk1kqZgPgRM';
  
  const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

  // Global flag to prevent multiple redirects
  let redirectAttempted = false;
  
  const redirectToDashboard = () => {
    if (redirectAttempted) {
      console.log('Redirect already attempted, skipping...');
      return;
    }
    redirectAttempted = true;
    console.log('Redirecting to dashboard...');
    
    // Store redirect intent
    sessionStorage.setItem('auth-redirect', 'dashboard');
    
    // Use replace instead of href to prevent back button issues
    window.location.replace('/dashboard');
  };

  // Handle Google user data sync
  async function syncGoogleUser(user) {
    try {
      console.log('üîÑ Syncing Google user data...');
      const { data, error } = await supabase.rpc('sync_google_user', {
        p_google_id: user.user_metadata?.provider_id || user.id,
        p_email: user.email,
        p_name: user.user_metadata?.full_name || user.user_metadata?.name || user.email?.split('@')[0],
        p_picture: user.user_metadata?.avatar_url || user.user_metadata?.picture,
        p_provider_id: user.user_metadata?.provider_id || user.id
      });

      if (error) {
        console.error('‚ö†Ô∏è Sync error (non-fatal):', error);
        // Don't fail the auth flow if sync fails
        return null;
      }

      console.log('‚úÖ Google user synced:', data);
      return data;
    } catch (err) {
      console.error('‚ö†Ô∏è Sync error (non-fatal):', err);
      // Don't fail the auth flow if sync fails
      return null;
    }
  }

  const persistSession = async (session, shouldSync = true) => {
    if (!session?.user) return;
    
    // Sync Google user data if it's a Google provider
    if (shouldSync && session.user.app_metadata?.provider === 'google') {
      await syncGoogleUser(session.user);
    }
    
    const sessionData = {
      user: session.user,
      access_token: session.access_token,
      refresh_token: session.refresh_token,
      timestamp: Date.now()
    };
    
    try {
      sessionStorage.setItem('simple-auth-session', JSON.stringify(sessionData));
      localStorage.setItem('simple-auth-session', JSON.stringify(sessionData));
      
      // Also store user separately for compatibility
      localStorage.setItem('simple-auth-user', JSON.stringify(session.user));
      
      window.dispatchEvent(new CustomEvent('user-logged-in', { detail: session.user }));
      console.log('‚úÖ Session persisted successfully');
      console.log('User email:', session.user.email);
    } catch (err) {
      console.error('‚ùå Error persisting session:', err);
    }
  };

  // Handle the OAuth callback
  async function handleAuthCallback() {
    console.log('üîê Starting auth callback handler...');
    console.log('Current URL:', window.location.href);
    console.log('Hash:', window.location.hash);
    console.log('Search:', window.location.search);

    try {
      // 1) Check for hash fragment tokens (#access_token=...)
      const hash = window.location.hash || '';
      
      // Check for errors in hash first
      if (hash.includes('error=')) {
        const hashParams = new URLSearchParams(hash.replace('#', ''));
        const errorParam = hashParams.get('error');
        const errorDescription = hashParams.get('error_description');
        console.error('‚ùå OAuth error in hash:', errorParam, errorDescription);
        window.location.replace(`/login?error=${encodeURIComponent(errorParam || 'oauth_error')}&description=${encodeURIComponent(errorDescription || '')}`);
        return;
      }
      
      if (hash.includes('access_token')) {
        console.log('üì¶ Found tokens in hash fragment');
        const params = new URLSearchParams(hash.replace('#', ''));
        const access_token = params.get('access_token');
        const refresh_token = params.get('refresh_token') || params.get('provider_refresh_token');
        const type = params.get('type');

        // Check if this is a password reset (recovery) flow
        if (type === 'recovery' && access_token && refresh_token) {
          console.log('üîë Password reset callback detected');
          window.location.replace(`/reset-password${hash}`);
          return;
        }

        if (access_token && refresh_token) {
          console.log('‚úÖ Setting session from hash tokens...');
          try {
            const { data, error: sessionError } = await supabase.auth.setSession({ 
              access_token, 
              refresh_token 
            });

            if (sessionError) {
              console.error('‚ùå Error setting session:', sessionError);
            } else if (data?.session) {
              console.log('‚úÖ Session set successfully from hash');
              await persistSession(data.session, true);
              
              // Clean URL and redirect after a brief delay to ensure sync completes
              window.history.replaceState({}, document.title, '/auth/callback');
              setTimeout(() => {
                redirectToDashboard();
              }, 500);
              return;
            }
          } catch (err) {
            console.error('‚ùå Exception in setSession:', err);
          }
        } else {
          console.warn('‚ö†Ô∏è Hash found but missing tokens');
        }
      }

      // 2) Check for OAuth errors first
      const urlParams = new URLSearchParams(window.location.search);
      const errorParam = urlParams.get('error');
      const errorDescription = urlParams.get('error_description');
      
      if (errorParam) {
        console.error('‚ùå OAuth error received:', errorParam, errorDescription);
        window.location.replace(`/login?error=${encodeURIComponent(errorParam)}&description=${encodeURIComponent(errorDescription || '')}`);
        return;
      }

      // 3) Check for PKCE code in query string (?code=...)
      const urlHasCode = window.location.search.includes('code=');
      if (urlHasCode) {
        console.log('üì¶ Found code in query string (PKCE flow)');
        const type = urlParams.get('type');
        const code = urlParams.get('code');
        
        if (!code) {
          console.error('‚ùå Code parameter missing');
        } else {
          // If it's a recovery type, redirect to reset-password after exchange
          if (type === 'recovery') {
            console.log('üîë Recovery type detected');
            try {
              const { data, error } = await supabase.auth.exchangeCodeForSession(window.location.href);
              if (error) {
                console.error('‚ùå Auth callback (PKCE recovery) error:', error);
                window.location.replace('/reset-password?error=invalid_token');
                return;
              } else if (data?.session) {
                window.location.replace('/reset-password');
                return;
              }
            } catch (err) {
              console.error('‚ùå Error in recovery exchange:', err);
            }
          } else {
            // Regular OAuth flow (Google login)
            console.log('üîÑ Exchanging code for session (PKCE)...');
            console.log('Full URL for exchange:', window.location.href);
            console.log('Code parameter:', code);
            console.log('Current origin:', window.location.origin);
            
            try {
              // Method 1: Try with full URL (recommended by Supabase)
              let exchangeResult = await supabase.auth.exchangeCodeForSession(window.location.href);
              
              // Method 2: If that fails, try constructing URL manually
              if (exchangeResult.error) {
                console.warn('‚ö†Ô∏è Exchange with full URL failed:', exchangeResult.error);
                console.log('üîÑ Trying alternative method...');
                
                // Construct the callback URL manually
                const callbackUrl = new URL(window.location.origin + '/auth/callback');
                callbackUrl.searchParams.set('code', code);
                if (type) callbackUrl.searchParams.set('type', type);
                
                console.log('Trying with constructed URL:', callbackUrl.toString());
                exchangeResult = await supabase.auth.exchangeCodeForSession(callbackUrl.toString());
              }
              
              // Method 3: If still fails, try with just the path and query
              if (exchangeResult.error) {
                console.warn('‚ö†Ô∏è Exchange with constructed URL failed:', exchangeResult.error);
                const pathWithQuery = window.location.pathname + window.location.search;
                console.log('Trying with path + query:', pathWithQuery);
                exchangeResult = await supabase.auth.exchangeCodeForSession(pathWithQuery);
              }
              
              if (exchangeResult.error) {
                console.error('‚ùå Auth callback (PKCE) error after all attempts:', exchangeResult.error);
                const errorMsg = exchangeResult.error.message || 'Unknown error';
                const errorDesc = exchangeResult.error.description || '';
                
                // Detailed error logging
                console.error('‚ùå Code exchange failed. Configuration checklist:');
                console.error('1. Supabase Dashboard ‚Üí Authentication ‚Üí URL Configuration');
                console.error(`   Add to "Redirect URLs": ${window.location.origin}/auth/callback`);
                console.error('2. Supabase Dashboard ‚Üí Authentication ‚Üí Providers ‚Üí Google');
                console.error('   Ensure Google provider is enabled');
                console.error('   Verify Client ID and Client Secret are correct');
                console.error('3. Google Cloud Console ‚Üí APIs & Services ‚Üí Credentials');
                console.error(`   Add to "Authorized redirect URIs": ${window.location.origin}/auth/callback`);
                console.error('4. Make sure the redirect URI matches EXACTLY in both places');
                console.error('5. For localhost, use: http://localhost:4321/auth/callback');
                console.error('6. Wait a few minutes after making changes for them to propagate');
                
                const fullErrorMsg = `OAuth configuration error: ${errorMsg}. Please ensure the redirect URI "${window.location.origin}/auth/callback" is configured in Supabase Dashboard ‚Üí Authentication ‚Üí URL Configuration.`;
                window.location.replace(`/login?error=server_error&description=${encodeURIComponent(fullErrorMsg)}`);
                return;
              } else if (exchangeResult.data?.session) {
                console.log('‚úÖ Session obtained from PKCE exchange');
                await persistSession(exchangeResult.data.session, true);

                // Clean URL and redirect after a brief delay to ensure sync completes
                window.history.replaceState({}, document.title, '/auth/callback');
                setTimeout(() => {
                  redirectToDashboard();
                }, 500);
                return;
              } else {
                console.warn('‚ö†Ô∏è PKCE exchange succeeded but no session returned');
              }
            } catch (err) {
              console.error('‚ùå Exception in PKCE exchange:', err);
              const errorMsg = err instanceof Error ? err.message : String(err);
              console.error('Error details:', {
                message: errorMsg,
                stack: err instanceof Error ? err.stack : undefined,
                url: window.location.href,
                origin: window.location.origin
              });
              
              if (errorMsg.includes('exchange') || errorMsg.includes('code') || errorMsg.includes('redirect')) {
                const fullErrorMsg = `Unable to complete authentication: ${errorMsg}. Please check Supabase redirect URI configuration.`;
                window.location.replace(`/login?error=server_error&description=${encodeURIComponent(fullErrorMsg)}`);
                return;
              }
            }
          }
        }
      }

      // 4) Fallback: attempt to read current session (may already be set by Supabase)
      console.log('üîÑ Attempting to get existing session...');
      try {
        const { data, error } = await supabase.auth.getSession();
        if (error) {
          console.error('‚ùå Auth callback getSession error:', error);
        } else if (data?.session?.user) {
          console.log('‚úÖ Found existing session');
          await persistSession(data.session, true);
          setTimeout(() => {
            redirectToDashboard();
          }, 500);
          return;
        } else {
          console.log('‚ö†Ô∏è No session found in getSession');
        }
      } catch (err) {
        console.error('‚ùå Exception in getSession:', err);
      }

      // 5) Wait a bit and retry getSession (sometimes session takes a moment)
      console.log('‚è≥ Waiting 1 second and retrying getSession...');
      setTimeout(async () => {
        if (redirectAttempted) return;
        
        try {
          const { data, error } = await supabase.auth.getSession();
          if (!error && data?.session?.user) {
            console.log('‚úÖ Session found on retry');
            await persistSession(data.session, true);
            setTimeout(() => {
              redirectToDashboard();
            }, 500);
          } else {
            console.warn('‚ö†Ô∏è Still no session after retry:', error?.message || 'No error but no session');
          }
        } catch (err) {
          console.error('‚ùå Error in delayed getSession:', err);
        }
      }, 1000);

      // 6) Second retry after 3 seconds
      setTimeout(async () => {
        if (redirectAttempted) return;
        
        console.log('‚è≥ Second retry (3 seconds)...');
        try {
          const { data, error } = await supabase.auth.getSession();
          if (!error && data?.session?.user) {
            console.log('‚úÖ Session found on second retry');
            await persistSession(data.session, true);
            setTimeout(() => {
              redirectToDashboard();
            }, 500);
          }
        } catch (err) {
          console.error('‚ùå Error in second delayed getSession:', err);
        }
      }, 3000);

      // 7) Absolute safety timeout: redirect to login if still stuck after 8 seconds
      setTimeout(() => {
        if (!redirectAttempted) {
          console.warn('‚è∞ Auth callback timeout (8s), redirecting to login');
          window.location.replace('/login?error=google_auth_timeout');
        }
      }, 8000);
    } catch (err) {
      console.error('‚ùå Fatal error in callback handler:', err);
      if (!redirectAttempted) {
        window.location.replace('/login?error=auth_callback_error');
      }
    }
  }

  // Listen for auth state changes as primary mechanism
  supabase.auth.onAuthStateChange(async (event, session) => {
    console.log('üîî Auth state changed:', event, session?.user?.email || 'no user');
    
    if (event === 'SIGNED_IN' && session?.user) {
      console.log('‚úÖ SIGNED_IN event detected');
      await persistSession(session, true);
      
      // Redirect after sync completes
      if (!redirectAttempted) {
        setTimeout(() => {
          redirectToDashboard();
        }, 800);
      }
    } else if (event === 'TOKEN_REFRESHED' && session?.user) {
      console.log('üîÑ Token refreshed');
      await persistSession(session, false); // Don't sync on token refresh
    }
  });

  // Diagnostic: Log all URL information
  console.log('üîç OAuth Callback Diagnostics:');
  console.log('Full URL:', window.location.href);
  console.log('Origin:', window.location.origin);
  console.log('Pathname:', window.location.pathname);
  console.log('Search:', window.location.search);
  console.log('Hash:', window.location.hash);
  console.log('Expected redirect URI:', `${window.location.origin}/auth/callback`);
  
  // Check if we have a code parameter
  const urlParams = new URLSearchParams(window.location.search);
  const code = urlParams.get('code');
  if (code) {
    console.log('‚úÖ Code parameter found:', code.substring(0, 20) + '...');
  } else {
    console.warn('‚ö†Ô∏è No code parameter found in URL');
  }
  
  // Run the callback handler immediately
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', handleAuthCallback);
  } else {
    handleAuthCallback();
  }
</script>
