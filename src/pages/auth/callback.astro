    main { background-color: #fff !important; }
    body { background-color: #fff !important; }
    
    /* Ensure button text is white and visible - use very specific selectors */
    .back-to-login-btn,
    a.back-to-login-btn,
    a.bg-gray-800 {
      color: #ffffff !important;
      background-color: #1f2937 !important; /* gray-800 */
    }
    
    .go-home-btn,
    a.go-home-btn,
    a.bg-gray-600 {
      color: #ffffff !important;
      background-color: #4b5563 !important; /* gray-600 */
    }
    
    .back-to-login-btn:hover,
    .go-home-btn:hover,
    a.back-to-login-btn:hover,
    a.go-home-btn:hover,
    a.bg-gray-800:hover,
